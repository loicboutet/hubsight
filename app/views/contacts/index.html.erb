<% content_for :header, "Contacts" %>

<div class="section">
  <!-- Header Section -->
  <div style="margin-bottom: var(--space-xl); display: flex; justify-content: space-between; align-items: center;">
    <div>
      <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Gestion des Contacts</h2>
      <p class="typo-body-small" style="color: var(--medium-gray);">Total: <%= @contacts.total_count %> contact<%= @contacts.total_count > 1 ? 's' : '' %></p>
    </div>
    <div style="display: flex; gap: var(--space-md);">
      <%= link_to new_contact_path, class: "typo-btn-success", style: "display: inline-flex; align-items: center; gap: var(--space-sm);" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Nouveau Contact
      <% end %>
    </div>
  </div>

  <div style="background-color: var(--white); border-radius: var(--space-md); width: 100%; max-width: 100%; overflow-x: hidden; box-sizing: border-box;">
    <!-- Search Section -->
    <%= form_with url: contacts_path, method: :get, style: "margin-bottom: var(--space-xl); padding: var(--space-lg); background-color: #f8f9fa; border-radius: var(--space-sm);" do |f| %>
      <div style="display: grid; grid-template-columns: 1fr auto; gap: var(--space-md); align-items: end;">
        <div>
          <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-sm);">Recherche</label>
          <%= f.text_field :search, placeholder: "Nom, email, organisation, poste...", value: params[:search], style: "width: 100%; padding: 10px; border: 1px solid var(--light-gray); border-radius: var(--space-sm);" %>
        </div>
        <div style="display: flex; gap: var(--space-md);">
          <button type="button" onclick="window.location.href='<%= contacts_path %>'" class="typo-btn-cancel" style="display: inline-flex; align-items: center; gap: var(--space-sm);">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            Effacer
          </button>
          <%= f.submit "Rechercher", class: "typo-btn-success", style: "display: inline-flex; align-items: center; gap: var(--space-sm);" %>
        </div>
      </div>
    <% end %>

    <!-- Contacts Table -->
    <div class="table-responsive" style="overflow-x: auto; -webkit-overflow-scrolling: touch;">
      <table style="width: 100%; border-collapse: collapse; min-width: 1000px;">
        <thead>
          <tr style="border-bottom: 2px solid var(--pink-pale);">
            <th class="typo-body-small typo-bold" style="text-align: left; padding: var(--space-md); color: #666;">Nom</th>
            <th class="typo-body-small typo-bold" style="text-align: left; padding: var(--space-md); color: #666;">Organisation</th>
            <th class="typo-body-small typo-bold" style="text-align: left; padding: var(--space-md); color: #666;">Poste</th>
            <th class="typo-body-small typo-bold" style="text-align: left; padding: var(--space-md); color: #666;">Téléphone</th>
            <th class="typo-body-small typo-bold" style="text-align: left; padding: var(--space-md); color: #666;">Email</th>
            <th class="typo-body-small typo-bold" style="text-align: left; padding: var(--space-md); color: #666;">Statut</th>
            <th class="typo-body-small typo-bold" style="text-align: center; padding: var(--space-md); color: #666;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if @contacts.any? %>
            <% @contacts.each do |contact| %>
              <tr style="border-bottom: 1px solid #eee;">
                <td class="typo-body-small typo-bold" style="padding: var(--space-md); color: var(--coral-primary);">
                  <%= link_to contact.full_name, contact, style: "color: var(--coral-primary); text-decoration: none;" %>
                </td>
                <td class="typo-body-small" style="padding: var(--space-md); color: #666;">
                  <% if contact.organization %>
                    <%= link_to contact.organization.name, contact.organization, style: "color: #666; text-decoration: none;" %>
                  <% else %>
                    <span style="color: #999;">-</span>
                  <% end %>
                </td>
                <td class="typo-body-small" style="padding: var(--space-md); color: #666;">
                  <%= contact.position || '-' %>
                </td>
                <td class="typo-body-small" style="padding: var(--space-md); color: #666;">
                  <%= contact.phone || '-' %>
                </td>
                <td class="typo-body-small" style="padding: var(--space-md); color: #666;">
                  <%= contact.email || '-' %>
                </td>
                <td style="padding: var(--space-md);">
                  <% if contact.active? %>
                    <span style="display: inline-block; padding: 4px 10px; background-color: #d4edda; color: #155724; border-radius: 12px; font-size: 0.75rem; font-weight: 600;">
                      Actif
                    </span>
                  <% else %>
                    <span style="display: inline-block; padding: 4px 10px; background-color: #e2e8f0; color: #4a5568; border-radius: 12px; font-size: 0.75rem; font-weight: 600;">
                      Inactif
                    </span>
                  <% end %>
                </td>
                <td style="padding: var(--space-md);">
                  <div style="display: flex; gap: 6px; justify-content: center;">
                    <%= link_to contact_path(contact), style: "display: inline-flex; align-items: center; gap: 4px; padding: 6px 12px; background-color: var(--coral-primary); color: white; border-radius: 4px; font-size: 0.75rem; font-weight: 600; text-decoration: none;" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                      Voir
                    <% end %>
                    <%= link_to edit_contact_path(contact), style: "display: inline-flex; align-items: center; gap: 4px; padding: 6px 12px; background-color: #4a5568; color: white; border-radius: 4px; font-size: 0.75rem; font-weight: 600; text-decoration: none;" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                      Éditer
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="7" style="padding: var(--space-xl); text-align: center; color: #999;">
                Aucun contact trouvé
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @contacts.total_pages > 1 %>
      <div style="margin-top: var(--space-xl);">
        <%= render 'shared/pagination', 
          current_page: @contacts.current_page, 
          total_pages: @contacts.total_pages, 
          total_count: @contacts.total_count, 
          per_page: 15,
          path: contacts_path %>
      </div>
    <% end %>
  </div>
</div>
