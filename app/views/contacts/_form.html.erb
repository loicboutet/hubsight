          <% else %>
            <%= select_tag 'contact[organization_id]', 
                options_for_select([
                  ['ENGIE Solutions', 'engie-solutions'],
                  ['OTIS France', 'otis-france'],
                  ['Daikin Service', 'daikin-service'],
                  ['Bouygues Energies & Services', 'bouygues-energies'],
                  ['Clean Pro Services', 'clean-pro'],
