<% content_for :header, "Nouveau Contact" %>

<div class="section">
  <div style="margin-bottom: var(--space-xl);">
    <%= render 'shared/breadcrumb', path: [
      { name: 'Contacts', url: contacts_path },
      { name: 'Nouveau', url: nil }
    ] %>
  </div>

  <div class="page-header-responsive" style="margin-bottom: var(--space-lg);">
    <div>
      <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Créer un nouveau contact</h2>
      <p class="typo-body-small">Ajouter un nouveau contact à l'annuaire</p>
    </div>
    <%= link_to contacts_path, class: "typo-btn-cancel" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Retour à la liste
    <% end %>
  </div>

  <%= render 'form', contact: @contact %>
</div>
