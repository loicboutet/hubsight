<% content_for :header, "Organisation" %>

<div class="section">
  <!-- Header with Actions -->
  <div style="margin-bottom: var(--space-xl); display: flex; justify-content: space-between; align-items: center;">
    <div>
      <h2 class="typo-h2" style="margin-bottom: var(--space-sm);"><%= @organization.name %></h2>
      <p class="typo-body-small"><%= @organization.legal_name %></p>
    </div>
    <div style="display: flex; gap: var(--space-md);">
      <%= link_to organizations_path, class: "typo-btn-cancel", style: "display: inline-flex; align-items: center; gap: var(--space-sm);" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Retour
      <% end %>
      <%= link_to edit_organization_path(@organization.id), class: "typo-btn-primary", style: "display: inline-flex; align-items: center; gap: var(--space-sm);" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Éditer
      <% end %>
      <%= link_to organization_path(@organization.id), method: :delete, class: "typo-btn-small typo-btn-small-danger", onclick: "return confirm('Êtes-vous sûr de vouloir supprimer cette organisation ? Cette action est irréversible.');" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Supprimer
      <% end %>
    </div>
  </div>

  <div style="display: grid; grid-template-columns: 2fr 1fr; gap: var(--space-xl);">
    <!-- Main Information Column -->
    <div>
      <!-- Basic Information -->
      <div style="background-color: var(--white); border-radius: var(--space-md);  margin-bottom: var(--space-lg);">
        <h3 class="typo-h3" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
          Informations de Base
        </h3>
        
        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--space-lg);">
          <div>
            <p class="typo-body-small" style="color: #999; margin-bottom: var(--space-xs);">Nom de l'Organisation</p>
            <p class="typo-body typo-bold"><%= @organization.name %></p>
          </div>
          
          <div>
            <p class="typo-body-small" style="color: #999; margin-bottom: var(--space-xs);">Raison Sociale</p>
            <p class="typo-body"><%= @organization.legal_name %></p>
          </div>
          
          <div>
            <p class="typo-body-small" style="color: #999; margin-bottom: var(--space-xs);">SIRET</p>
            <p class="typo-body typo-bold" style="color: var(--coral-primary);"><%= @organization.siret %></p>
          </div>
          
          <div>
            <p class="typo-body-small" style="color: #999; margin-bottom: var(--space-xs);">Type d'Organisation</p>
            <span style="display: inline-block; padding: 6px 14px; background-color: #e7f3ff; color: #0066cc; border-radius: 12px; font-size: 0.875rem; font-weight: 600;">
              <%= @organization.organization_type %>
            </span>
          </div>
          
          <div style="grid-column: 1 / -1;">
            <p class="typo-body-small" style="color: #999; margin-bottom: var(--space-xs);">Spécialités / Métiers</p>
            <p class="typo-body"><%= @organization.specialties %></p>
          </div>
        </div>
      </div>

      <!-- Contact Information -->
      <div style="background-color: var(--white); border-radius: var(--space-md);  margin-bottom: var(--space-lg);">
        <h3 class="typo-h3" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
          Coordonnées
        </h3>
        
        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--space-lg);">
          <div style="grid-column: 1 / -1;">
            <p class="typo-body-small" style="color: #999; margin-bottom: var(--space-xs);">Adresse du Siège</p>
            <p class="typo-body"><%= @organization.headquarters_address %></p>
            <p class="typo-body"><%= @organization.postal_code %> <%= @organization.city %></p>
          </div>
          
          <div>
            <p class="typo-body-small" style="color: #999; margin-bottom: var(--space-xs);">Téléphone</p>
            <p class="typo-body">
              <a href="tel:<%= @organization.phone %>" style="color: var(--coral-primary); text-decoration: none;">
                <%= @organization.phone %>
              </a>
            </p>
          </div>
          
          <div>
            <p class="typo-body-small" style="color: #999; margin-bottom: var(--space-xs);">Email</p>
            <p class="typo-body">
              <a href="mailto:<%= @organization.email %>" style="color: var(--coral-primary); text-decoration: none;">
                <%= @organization.email %>
              </a>
            </p>
          </div>
          
          <div style="grid-column: 1 / -1;">
            <p class="typo-body-small" style="color: #999; margin-bottom: var(--space-xs);">Site Web</p>
            <p class="typo-body">
              <a href="<%= @organization.website %>" target="_blank" style="color: var(--coral-primary); text-decoration: none;">
                <%= @organization.website %>
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="display: inline-block; vertical-align: middle;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </p>
          </div>
        </div>
      </div>

      <!-- Additional Notes -->
      <% if @organization.notes.present? %>
        <div style="background-color: var(--white); border-radius: var(--space-md); ">
          <h3 class="typo-h3" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
            Notes
          </h3>
          <p class="typo-body" style="line-height: 1.6;"><%= @organization.notes %></p>
        </div>
      <% end %>
    </div>

    <!-- Sidebar Column -->
    <div>
      <!-- Status Card -->
      <div style="background-color: var(--white); border-radius: var(--space-md);  margin-bottom: var(--space-lg);">
        <h4 class="typo-h4" style="margin-bottom: var(--space-md);">Statut</h4>
        <div style="text-align: center; padding: var(--space-md);">
          <span style="display: inline-block; padding: 10px 24px; background-color: <%= @organization.status == 'active' ? '#d4edda' : '#f8d7da' %>; color: <%= @organization.status == 'active' ? '#155724' : '#721c24' %>; border-radius: 24px; font-size: 1rem; font-weight: 600;">
            <%= @organization.status == 'active' ? 'Actif' : 'Inactif' %>
          </span>
        </div>
      </div>

      <!-- Relationship Info -->
      <div style="background-color: var(--white); border-radius: var(--space-md);  margin-bottom: var(--space-lg);">
        <h4 class="typo-h4" style="margin-bottom: var(--space-md);">Relation</h4>
        <div>
          <p class="typo-body-small" style="color: #999; margin-bottom: var(--space-xs);">Début de Relation</p>
          <p class="typo-body typo-bold" style="color: var(--coral-primary);">
            <%= @organization.relationship_start_date.strftime("%d/%m/%Y") %>
          </p>
          <p class="typo-body-small" style="color: #999; margin-top: var(--space-sm);">
            Soit <%= ((Date.today - @organization.relationship_start_date) / 365).to_i %> ans de partenariat
          </p>
        </div>
      </div>

      <!-- Quick Stats -->
      <div style="background-color: var(--white); border-radius: var(--space-md);  margin-bottom: var(--space-lg);">
        <h4 class="typo-h4" style="margin-bottom: var(--space-md);">Statistiques</h4>
        
        <div style="margin-bottom: var(--space-md);">
          <p class="typo-body-small" style="color: #999; margin-bottom: var(--space-xs);">Contrats Actifs</p>
          <p class="typo-h2" style="color: var(--coral-primary); margin: 0;">12</p>
        </div>
        
        <div style="margin-bottom: var(--space-md);">
          <p class="typo-body-small" style="color: #999; margin-bottom: var(--space-xs);">Contacts Associés</p>
          <p class="typo-h3" style="margin: 0;">4</p>
        </div>
        
        <div>
          <p class="typo-body-small" style="color: #999; margin-bottom: var(--space-xs);">Agences</p>
          <p class="typo-h3" style="margin: 0;">2</p>
        </div>
      </div>

      <!-- Quick Actions -->
      <div style="background-color: var(--white); border-radius: var(--space-md); ">
        <h4 class="typo-h4" style="margin-bottom: var(--space-md);">Actions Rapides</h4>
        
        <div style="display: flex; flex-direction: column; gap: var(--space-sm);">
          <a href="#" class="typo-btn-primary" style="width: 100%; text-align: center; display: inline-flex; align-items: center; justify-content: center; gap: var(--space-sm);">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nouveau Contrat
          </a>
          
          <a href="#" class="typo-btn-primary" style="width: 100%; text-align: center; display: inline-flex; align-items: center; justify-content: center; gap: var(--space-sm);">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Nouveau Contact
          </a>
          
          <a href="#" class="typo-btn-primary" style="width: 100%; text-align: center; display: inline-flex; align-items: center; justify-content: center; gap: var(--space-sm);">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Voir Contrats
          </a>
          
          <%= link_to organization_path(@organization.id), method: :delete, class: "typo-btn-small typo-btn-small-danger", onclick: "return confirm('Êtes-vous sûr de vouloir supprimer cette organisation ?');", style: "width: 100%; text-align: center; display: inline-flex; align-items: center; justify-content: center; gap: var(--space-sm); cursor: pointer;" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Supprimer
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
