<% content_for :header, "Search - Sites" %>

<div class="section">
  <div style="margin-bottom: var(--space-xl);">
    <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Recherche de Sites</h2>
    <p class="typo-body-small">Rechercher des sites dans votre portefeuille</p>
  </div>

  <div style="background-color: var(--white); border-radius: var(--space-md); ">
    
    <!-- Main Search Bar -->
    <div style="margin-bottom: var(--space-xl);">
      <div style="position: relative;">
        <input type="text" placeholder="Rechercher un site..." 
          style="width: 100%; padding: 16px 50px 16px 50px; font-size: 1.125rem; border: 2px solid var(--light-gray); border-radius: var(--space-md); transition: border-color 0.2s;">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" 
          style="position: absolute; left: 16px; top: 50%; transform: translateY(-50%); color: var(--medium-gray);">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <button type="submit" class="typo-btn-success" style="position: absolute; right: 8px; top: 50%; transform: translateY(-50%); height: calc(100% - 16px);">
          Rechercher
        </button>
      </div>
    </div>

    <!-- Search Tabs -->
    <div style="margin-bottom: var(--space-xl); border-bottom: 2px solid var(--pink-pale);">
      <div style="display: flex; gap: var(--space-md); overflow-x: auto;">
        <%= link_to search_path, class: "typo-body-small", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid transparent; color: var(--medium-gray); white-space: nowrap; transition: color 0.2s, border-color 0.2s;", onmouseover: "this.style.color='var(--coral-primary)'; this.style.borderBottomColor='var(--coral-primary)';", onmouseout: "this.style.color='var(--medium-gray)'; this.style.borderBottomColor='transparent';" do %>
          Tous les rÃ©sultats
        <% end %>
        <%= link_to search_sites_path, class: "typo-body-small typo-bold", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid var(--coral-primary); color: var(--coral-primary); white-space: nowrap;" do %>
          Sites
        <% end %>
        <%= link_to search_contracts_path, class: "typo-body-small", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid transparent; color: var(--medium-gray); white-space: nowrap; transition: color 0.2s, border-color 0.2s;", onmouseover: "this.style.color='var(--coral-primary)'; this.style.borderBottomColor='var(--coral-primary)';", onmouseout: "this.style.color='var(--medium-gray)'; this.style.borderBottomColor='transparent';" do %>
          Contrats
        <% end %>
        <%= link_to search_equipment_path, class: "typo-body-small", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid transparent; color: var(--medium-gray); white-space: nowrap; transition: color 0.2s, border-color 0.2s;", onmouseover: "this.style.color='var(--coral-primary)'; this.style.borderBottomColor='var(--coral-primary)';", onmouseout: "this.style.color='var(--medium-gray)'; this.style.borderBottomColor='transparent';" do %>
          Ã‰quipements
        <% end %>
        <%= link_to search_organizations_path, class: "typo-body-small", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid transparent; color: var(--medium-gray); white-space: nowrap; transition: color 0.2s, border-color 0.2s;", onmouseover: "this.style.color='var(--coral-primary)'; this.style.borderBottomColor='var(--coral-primary)';", onmouseout: "this.style.color='var(--medium-gray)'; this.style.borderBottomColor='transparent';" do %>
          Organisations
        <% end %>
        <span class="typo-body-small" style="padding: var(--space-md) var(--space-lg); display: inline-block; border-bottom: 3px solid transparent; color: var(--light-gray); white-space: nowrap; cursor: not-allowed;">
          Contacts
        </span>
      </div>
    </div>

    <!-- Quick Filters -->
    <div style="margin-bottom: var(--space-xl); padding: var(--space-lg); background-color: #f8f9fa; border-radius: var(--space-sm);">
      <h5 class="typo-h5" style="margin-bottom: var(--space-md);">Filtres Rapides</h5>
      <div style="display: flex; flex-wrap: wrap; gap: var(--space-sm);">
        <button class="typo-label typo-label-primary">Tous</button>
        <button class="typo-label typo-label-success">Actifs</button>
        <button class="typo-label">Par dÃ©partement</button>
        <button class="typo-label">Par surface</button>
      </div>
    </div>

    <!-- Sites Results -->
    <div>
      <div style="margin-bottom: var(--space-lg);">
        <h3 class="typo-h3" style="margin-bottom: var(--space-sm);">Sites RÃ©cents</h3>
        <p class="typo-body-small" style="color: var(--medium-gray);">
