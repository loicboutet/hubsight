      </div>

      <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: var(--space-md);">
        <% Site.order(created_at: :desc).each do |site| %>
          <div style="border: 1px solid var(--light-gray); border-radius: var(--space-md); padding: var(--space-lg); transition: all 0.2s; background: var(--white);" onmouseover="this.style.boxShadow='0 4px 12px rgba(0,0,0,0.1)'; this.style.borderColor='var(--coral-primary)';" onmouseout="this.style.boxShadow='none'; this.style.borderColor='var(--light-gray)';">
            <div style="display: flex; align-items: start; justify-content: space-between; margin-bottom: var(--space-sm);">
              <span class="typo-label typo-label-primary">Site</span>
              <span class="typo-label typo-label-<%= site.status == 'active' ? 'success' : 'warning' %>"><%= site.status.capitalize %></span>
            </div>
            <h5 class="typo-h5" style="margin-bottom: var(--space-xs); color: var(--dark-gray);"><%= site.name %></h5>
            <p class="typo-body-small" style="color: var(--medium-gray); margin-bottom: var(--space-sm);">
              ğŸ“ <%= site.address %>
            </p>
            <p class="typo-body-small" style="color: var(--medium-gray); margin-bottom: var(--space-md);">
              <%= site.city %> (<%= site.department %>) â€¢ <%= number_with_delimiter(site.total_area || 0, delimiter: ' ') %> mÂ²
            </p>
            <% if site.buildings.any? %>
              <p class="typo-body-small" style="color: var(--light-gray); font-size: 0.85rem; margin-bottom: var(--space-sm);">
                ğŸ¢ <%= pluralize(site.buildings.count, 'bÃ¢timent') %>
              </p>
            <% end %>
            <div style="display: flex; gap: var(--space-sm); margin-top: var(--space-md);">
              <%= link_to site_path(site), title: "Voir", class: "typo-btn-small typo-btn-small-secondary" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
