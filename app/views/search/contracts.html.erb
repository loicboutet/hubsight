<% content_for :header, "Search - Contrats" %>

<div class="section">
  <div style="margin-bottom: var(--space-xl);">
    <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Recherche de Contrats</h2>
    <p class="typo-body-small">Rechercher des contrats dans votre portefeuille</p>
  </div>

  <div style="background-color: var(--white); border-radius: var(--space-md); ">
    
    <!-- Filters Section -->
    <div style="margin-bottom: var(--space-xl); padding: var(--space-lg); background-color: #f8f9fa; border-radius: var(--space-sm);">
      <%= form_with url: global_search_contracts_path, method: :get, local: true do |f| %>
        <div style="display: grid; grid-template-columns: 1fr auto auto; gap: var(--space-md); align-items: end;">
          <div>
            <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-sm);">Recherche</label>
            <%= f.text_field :q, 
                value: @query,
                placeholder: "Titre, objet du contrat...", 
                style: "width: 100%; padding: 10px; border: 1px solid var(--light-gray); border-radius: var(--space-sm);" %>
          </div>
          <button type="button" 
                  onclick="window.location.href='<%= global_search_contracts_path %>'"
                  class="typo-btn-cancel" 
                  style="display: inline-flex; align-items: center; gap: var(--space-sm);">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            Effacer
          </button>
          <button type="submit" class="typo-btn-success" style="display: inline-flex; align-items: center; gap: var(--space-sm);">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            Rechercher
          </button>
        </div>
      <% end %>
    </div>

    <!-- Search Tabs -->
    <div style="margin-bottom: var(--space-xl); border-bottom: 2px solid var(--pink-pale);">
      <div style="display: flex; gap: var(--space-md); overflow-x: auto;">
        <%= link_to search_path, class: "typo-body-small", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid transparent; color: var(--medium-gray); white-space: nowrap; transition: color 0.2s, border-color 0.2s;", onmouseover: "this.style.color='var(--coral-primary)'; this.style.borderBottomColor='var(--coral-primary)';", onmouseout: "this.style.color='var(--medium-gray)'; this.style.borderBottomColor='transparent';" do %>
          Tous les résultats
        <% end %>
        <%= link_to global_search_sites_path(q: @query), class: "typo-body-small", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid transparent; color: var(--medium-gray); white-space: nowrap; transition: color 0.2s, border-color 0.2s;", onmouseover: "this.style.color='var(--coral-primary)'; this.style.borderBottomColor='var(--coral-primary)';", onmouseout: "this.style.color='var(--medium-gray)'; this.style.borderBottomColor='transparent';" do %>
          Sites
        <% end %>
        <%= link_to global_search_contracts_path(q: @query), class: "typo-body-small typo-bold", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid var(--coral-primary); color: var(--coral-primary); white-space: nowrap;" do %>
          Contrats
        <% end %>
        <%= link_to global_search_equipment_path(q: @query), class: "typo-body-small", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid transparent; color: var(--medium-gray); white-space: nowrap; transition: color 0.2s, border-color 0.2s;", onmouseover: "this.style.color='var(--coral-primary)'; this.style.borderBottomColor='var(--coral-primary)';", onmouseout: "this.style.color='var(--medium-gray)'; this.style.borderBottomColor='transparent';" do %>
          Équipements
        <% end %>
        <%= link_to global_search_organizations_path(q: @query), class: "typo-body-small", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid transparent; color: var(--medium-gray); white-space: nowrap; transition: color 0.2s, border-color 0.2s;", onmouseover: "this.style.color='var(--coral-primary)'; this.style.borderBottomColor='var(--coral-primary)';", onmouseout: "this.style.color='var(--medium-gray)'; this.style.borderBottomColor='transparent';" do %>
          Organisations
        <% end %>
        <%= link_to global_search_contacts_path(q: @query), class: "typo-body-small", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid transparent; color: var(--medium-gray); white-space: nowrap; transition: color 0.2s, border-color 0.2s;", onmouseover: "this.style.color='var(--coral-primary)'; this.style.borderBottomColor='var(--coral-primary)';", onmouseout: "this.style.color='var(--medium-gray)'; this.style.borderBottomColor='transparent';" do %>
          Contacts
        <% end %>
      </div>
    </div>

    <!-- Contracts Results -->
    <div>
      <div style="margin-bottom: var(--space-lg);">
        <h3 class="typo-h3" style="margin-bottom: var(--space-sm);"><%= @query.present? ? "Résultats de recherche" : "Contrats Récents" %></h3>
        <p class="typo-body-small" style="color: var(--medium-gray);">
          <%= @contracts.count %> contrat<%= @contracts.count > 1 ? 's' : '' %> trouvé<%= @contracts.count > 1 ? 's' : '' %>
        </p>
      </div>

      <% if @contracts.any? %>
        <div style="display: flex; flex-direction: column; gap: var(--space-lg);">
          <% @contracts.each do |contract| %>
            <div style="border: 1px solid var(--light-gray); border-radius: var(--space-md); padding: var(--space-xl); transition: all 0.2s; background: var(--white);" onmouseover="this.style.boxShadow='0 4px 12px rgba(0,0,0,0.1)'; this.style.borderColor='var(--coral-primary)';" onmouseout="this.style.boxShadow='none'; this.style.borderColor='var(--light-gray)';">
              <div style="display: flex; align-items: start; gap: var(--space-lg);">
                <div style="flex: 1;">
                  <div style="display: flex; align-items: center; gap: var(--space-sm); margin-bottom: var(--space-sm); flex-wrap: wrap;">
                    <span class="typo-label typo-label-primary">Contrat</span>
                    <% if contract.contract_family.present? %>
                      <span class="typo-label"><%= contract.contract_family %></span>
                    <% end %>
                    <% if contract.status == 'active' %>
                      <span class="typo-label typo-label-success">Actif</span>
                    <% elsif contract.status == 'pending' %>
                      <span class="typo-label typo-label-info">En attente</span>
                    <% elsif contract.status == 'expired' %>
                      <span class="typo-label typo-label-danger">Expiré</span>
                    <% end %>
                  </div>
                  <h4 class="typo-h4" style="margin: var(--space-sm) 0;"><%= contract.title %></h4>
                  <% if contract.contract_object.present? %>
                    <p class="typo-body" style="color: var(--medium-gray); margin-bottom: var(--space-md);">
                      <%= truncate(contract.contract_object, length: 150) %>
                    </p>
                  <% end %>
                  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: var(--space-md); margin-top: var(--space-md);">
                    <div>
                      <span class="typo-label-small" style="color: var(--light-gray); display: block; margin-bottom: var(--space-xs);">Site</span>
                      <span class="typo-body-small" style="color: var(--dark-gray);"><%= contract.site&.name || 'N/A' %></span>
                    </div>
                    <% if contract.annual_amount %>
                      <div>
                        <span class="typo-label-small" style="color: var(--light-gray); display: block; margin-bottom: var(--space-xs);">Montant annuel</span>
                        <span class="typo-body-small typo-bold" style="color: var(--dark-gray);"><%= number_to_currency(contract.annual_amount, unit: '€', format: '%n %u', precision: 0) %></span>
                      </div>
                    <% end %>
                    <% if contract.start_date && contract.end_date %>
                      <div>
                        <span class="typo-label-small" style="color: var(--light-gray); display: block; margin-bottom: var(--space-xs);">Période</span>
                        <span class="typo-body-small" style="color: var(--dark-gray);"><%= l(contract.start_date, format: :short) %> - <%= l(contract.end_date, format: :short) %></span>
                      </div>
                    <% end %>
                  </div>
                </div>
                <div style="display: flex; flex-direction: column; gap: var(--space-sm);">
                  <%= link_to contract_path(contract), title: "Voir", class: "typo-btn-small typo-btn-small-secondary" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    Voir
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div style="text-align: center; padding: var(--space-xxl); color: var(--medium-gray);">
          <p class="typo-body">Aucun contrat trouvé pour votre recherche.</p>
        </div>
      <% end %>
    </div>

  </div>
</div>
