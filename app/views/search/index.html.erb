<% content_for :header, "Search" %>

<div class="section">
  <div style="margin-bottom: var(--space-xl);">
    <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Recherche Globale</h2>
    <p class="typo-body-small">Rechercher dans tous les √©l√©ments du portefeuille</p>
  </div>

  <div style="background-color: var(--white); border-radius: var(--space-md); ">
    
    <!-- Main Search Bar -->
    <div style="margin-bottom: var(--space-xl);">
      <form action="<%= search_path %>" method="get">
        <div style="display: flex; gap: var(--space-md); align-items: center;">
          <div style="position: relative; flex: 1;">
            <input type="text" name="q" value="<%= params[:q] %>" placeholder="Rechercher un site, contrat, √©quipement, organisation..." 
              style="width: 100%; padding: 16px 16px 16px 50px; font-size: 1.125rem; border: 2px solid var(--light-gray); border-radius: var(--space-md); transition: border-color 0.2s;">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" 
              style="position: absolute; left: 16px; top: 50%; transform: translateY(-50%); color: var(--medium-gray); pointer-events: none;">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <button type="button" 
                  onclick="window.location.href='<%= search_path %>'"
                  class="typo-btn-cancel" 
                  style="display: inline-flex; align-items: center; gap: var(--space-sm); white-space: nowrap;">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            Effacer
          </button>
          <button type="submit" class="typo-btn-success" style="display: inline-flex; align-items: center; gap: var(--space-sm); white-space: nowrap;">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            Rechercher
          </button>
        </div>
      </form>
    </div>

    <!-- Search Tabs -->
    <div style="margin-bottom: var(--space-xl); border-bottom: 2px solid var(--pink-pale);">
      <div style="display: flex; gap: var(--space-md); overflow-x: auto;">
        <%= link_to search_path, class: "typo-body-small typo-bold", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid var(--coral-primary); color: var(--coral-primary); white-space: nowrap;" do %>
          Tous les r√©sultats
        <% end %>
        <%= link_to global_search_sites_path, class: "typo-body-small", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid transparent; color: var(--medium-gray); white-space: nowrap; transition: color 0.2s, border-color 0.2s;", onmouseover: "this.style.color='var(--coral-primary)'; this.style.borderBottomColor='var(--coral-primary)';", onmouseout: "this.style.color='var(--medium-gray)'; this.style.borderBottomColor='transparent';" do %>
          Sites
        <% end %>
        <%= link_to global_search_contracts_path, class: "typo-body-small", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid transparent; color: var(--medium-gray); white-space: nowrap; transition: color 0.2s, border-color 0.2s;", onmouseover: "this.style.color='var(--coral-primary)'; this.style.borderBottomColor='var(--coral-primary)';", onmouseout: "this.style.color='var(--medium-gray)'; this.style.borderBottomColor='transparent';" do %>
          Contrats
        <% end %>
        <%= link_to global_search_equipment_path, class: "typo-body-small", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid transparent; color: var(--medium-gray); white-space: nowrap; transition: color 0.2s, border-color 0.2s;", onmouseover: "this.style.color='var(--coral-primary)'; this.style.borderBottomColor='var(--coral-primary)';", onmouseout: "this.style.color='var(--medium-gray)'; this.style.borderBottomColor='transparent';" do %>
          √âquipements
        <% end %>
        <%= link_to global_search_organizations_path, class: "typo-body-small", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid transparent; color: var(--medium-gray); white-space: nowrap; transition: color 0.2s, border-color 0.2s;", onmouseover: "this.style.color='var(--coral-primary)'; this.style.borderBottomColor='var(--coral-primary)';", onmouseout: "this.style.color='var(--medium-gray)'; this.style.borderBottomColor='transparent';" do %>
          Organisations
        <% end %>
        <%= link_to global_search_contacts_path, class: "typo-body-small", style: "padding: var(--space-md) var(--space-lg); text-decoration: none; display: inline-block; border-bottom: 3px solid transparent; color: var(--medium-gray); white-space: nowrap; transition: color 0.2s, border-color 0.2s;", onmouseover: "this.style.color='var(--coral-primary)'; this.style.borderBottomColor='var(--coral-primary)';", onmouseout: "this.style.color='var(--medium-gray)'; this.style.borderBottomColor='transparent';" do %>
          Contacts
        <% end %>
      </div>
    </div>

    <!-- Recent Content from Seed Data -->
    <div>
      <div style="margin-bottom: var(--space-lg);">
        <h3 class="typo-h3" style="margin-bottom: var(--space-sm);">Contenu R√©cent</h3>
        <p class="typo-body-small" style="color: var(--medium-gray);">
          Explorez les derniers sites, contrats, √©quipements et organisations ajout√©s
        </p>
      </div>

      <!-- Sites Section -->
      <div style="margin-bottom: var(--space-2xl);">
        <div style="display: flex; align-items: center; gap: var(--space-md); margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--coral-primary);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
          <h4 class="typo-h4" style="margin: 0;">Sites</h4>
        </div>
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: var(--space-md);">
          <% @sites.each do |site| %>
            <div style="border: 1px solid var(--light-gray); border-radius: var(--space-md); padding: var(--space-lg); transition: all 0.2s; background: var(--white);" onmouseover="this.style.boxShadow='0 4px 12px rgba(0,0,0,0.1)'; this.style.borderColor='var(--coral-primary)';" onmouseout="this.style.boxShadow='none'; this.style.borderColor='var(--light-gray)';">
              <div style="display: flex; align-items: start; justify-content: space-between; margin-bottom: var(--space-sm);">
                <span class="typo-label typo-label-primary">Site</span>
                <span class="typo-label typo-label-<%= site.status == 'active' ? 'success' : 'warning' %>"><%= site.status.capitalize %></span>
              </div>
              <h5 class="typo-h5" style="margin-bottom: var(--space-xs); color: var(--dark-gray);"><%= site.name %></h5>
              <p class="typo-body-small" style="color: var(--medium-gray); margin-bottom: var(--space-md);">
                <%= site.city %>, <%= site.department %> ‚Ä¢ <%= number_with_delimiter(site.total_area || 0, delimiter: ' ') %> m¬≤
              </p>
              <div style="display: flex; gap: var(--space-sm);">
                <%= link_to site_path(site), title: "Voir", class: "typo-btn-small typo-btn-small-secondary" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  Voir
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Contracts Section -->
      <div style="margin-bottom: var(--space-2xl);">
        <div style="display: flex; align-items: center; gap: var(--space-md); margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--coral-primary);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h4 class="typo-h4" style="margin: 0;">Contrats</h4>
        </div>
        <div style="display: flex; flex-direction: column; gap: var(--space-md);">
          <% @contracts.each do |contract| %>
            <div style="border: 1px solid var(--light-gray); border-radius: var(--space-md); padding: var(--space-lg); transition: all 0.2s; background: var(--white);" onmouseover="this.style.boxShadow='0 4px 12px rgba(0,0,0,0.1)'; this.style.borderColor='var(--coral-primary)';" onmouseout="this.style.boxShadow='none'; this.style.borderColor='var(--light-gray)';">
              <div style="display: flex; align-items: start; gap: var(--space-md);">
                <div style="flex: 1;">
                  <div style="display: flex; align-items: center; gap: var(--space-sm); margin-bottom: var(--space-xs); flex-wrap: wrap;">
                    <span class="typo-label typo-label-primary">Contrat</span>
                    <span class="typo-label"><%= contract.contract_family %></span>
                    <% if contract.status == 'active' %>
                      <span class="typo-label typo-label-success">Actif</span>
                    <% elsif contract.status == 'pending' %>
                      <span class="typo-label typo-label-info">En attente</span>
                    <% elsif contract.status == 'expired' %>
                      <span class="typo-label typo-label-danger">Expir√©</span>
                    <% end %>
                  </div>
                  <h5 class="typo-h5" style="margin: var(--space-xs) 0;"><%= contract.title %></h5>
                  <p class="typo-body-small" style="color: var(--medium-gray); margin-bottom: var(--space-sm);">
                    <%= truncate(contract.contract_object, length: 100) %>
                  </p>
                  <div style="display: flex; gap: var(--space-lg); flex-wrap: wrap;">
                    <span class="typo-body-small" style="color: var(--medium-gray);">
                      <strong>Site:</strong> <%= contract.site&.name || 'N/A' %>
                    </span>
                    <% if contract.annual_amount %>
                      <span class="typo-body-small" style="color: var(--medium-gray);">
                        <strong>Montant:</strong> <%= number_to_currency(contract.annual_amount, unit: '‚Ç¨', format: '%n %u', precision: 0) %>/an
                      </span>
                    <% end %>
                    <% if contract.end_date %>
                      <span class="typo-body-small" style="color: var(--medium-gray);">
                        <strong>Fin:</strong> <%= l(contract.end_date, format: :short) %>
                      </span>
                    <% end %>
                  </div>
                </div>
                <%= link_to contract_path(contract), title: "Voir", class: "typo-btn-small typo-btn-small-secondary" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  Voir
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Equipment Section -->
      <div style="margin-bottom: var(--space-2xl);">
        <div style="display: flex; align-items: center; gap: var(--space-md); margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--coral-primary);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <h4 class="typo-h4" style="margin: 0;">√âquipements</h4>
        </div>
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: var(--space-md);">
          <% @equipment.each do |equipment| %>
            <div style="border: 1px solid var(--light-gray); border-radius: var(--space-md); padding: var(--space-lg); transition: all 0.2s; background: var(--white);" onmouseover="this.style.boxShadow='0 4px 12px rgba(0,0,0,0.1)'; this.style.borderColor='var(--coral-primary)';" onmouseout="this.style.boxShadow='none'; this.style.borderColor='var(--light-gray)';">
              <div style="display: flex; align-items: start; justify-content: space-between; margin-bottom: var(--space-sm);">
                <span class="typo-label typo-label-primary">√âquipement</span>
                <% if equipment.criticality == 'critical' %>
                  <span class="typo-label typo-label-danger">Critique</span>
                <% elsif equipment.criticality == 'high' %>
                  <span class="typo-label typo-label-warning">Haute</span>
                <% end %>
              </div>
              <h5 class="typo-h5" style="margin-bottom: var(--space-xs); color: var(--dark-gray); font-size: 1rem;"><%= truncate(equipment.name, length: 35) %></h5>
              <p class="typo-body-small" style="color: var(--medium-gray); margin-bottom: var(--space-sm);">
                <%= equipment.manufacturer %> <%= equipment.model %>
              </p>
              <% if equipment.space %>
                <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.8rem;">
                  üìç <%= equipment.space.name %>
                </p>
              <% end %>
              <div style="margin-top: var(--space-md);">
                <%= link_to equipment_path(equipment), title: "Voir", class: "typo-btn-small typo-btn-small-secondary" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  Voir
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Organizations Section -->
      <div style="margin-bottom: var(--space-xl);">
        <div style="display: flex; align-items: center; gap: var(--space-md); margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--coral-primary);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
          <h4 class="typo-h4" style="margin: 0;">Organisations</h4>
        </div>
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: var(--space-md);">
          <% @organizations.each do |org| %>
            <div style="border: 1px solid var(--light-gray); border-radius: var(--space-md); padding: var(--space-lg); transition: all 0.2s; background: var(--white);" onmouseover="this.style.boxShadow='0 4px 12px rgba(0,0,0,0.1)'; this.style.borderColor='var(--coral-primary)';" onmouseout="this.style.boxShadow='none'; this.style.borderColor='var(--light-gray)';">
              <div style="display: flex; align-items: start; justify-content: space-between; margin-bottom: var(--space-sm);">
                <span class="typo-label typo-label-primary"><%= org.organization_type&.capitalize || 'Organization' %></span>
              </div>
              <h5 class="typo-h5" style="margin-bottom: var(--space-xs); color: var(--dark-gray);"><%= org.name %></h5>
              <% if org.headquarters_address.present? %>
                <p class="typo-body-small" style="color: var(--medium-gray); margin-bottom: var(--space-sm);">
                  <%= truncate(org.headquarters_address, length: 50) %>
                </p>
              <% end %>
              <div style="margin-top: var(--space-md);">
                <%= link_to organization_path(org), title: "Voir", class: "typo-btn-small typo-btn-small-secondary" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  Voir
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>

  </div>
</div>
