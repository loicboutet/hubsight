<% content_for :header, "Bâtiment" %>

<div class="section">
  <!-- Breadcrumb Navigation -->
  <%= render 'shared/breadcrumb', path: [
    { name: 'Sites', url: sites_path, icon: render('shared/hierarchy_icons', type: 'site', size: 16) },
    { name: 'Tour Montparnasse', url: site_path('tour-montparnasse'), icon: render('shared/hierarchy_icons', type: 'site', size: 16) },
    { name: 'Bâtiments', url: site_buildings_path('tour-montparnasse'), icon: render('shared/hierarchy_icons', type: 'building', size: 16) },
    { name: 'Bâtiment A', url: nil, icon: render('shared/hierarchy_icons', type: 'building', size: 16) }
  ] %>

  <!-- Header Section -->
  <div style="margin-bottom: var(--space-xl); display: flex; justify-content: space-between; align-items: center;">
    <div style="display: flex; align-items: center; gap: var(--space-md);">
      <%= render 'shared/hierarchy_icons', type: 'building', size: 32, color: '#10b981' %>
      <div>
        <h2 class="typo-h2" style="margin-bottom: var(--space-xs);">Bâtiment A - Principal</h2>
        <p class="typo-body-small" style="color: var(--medium-gray);">Site: Tour Montparnasse</p>
      </div>
    </div>
    <div style="display: flex; gap: var(--space-md);">
      <%= link_to edit_site_building_path('tour-montparnasse', 'building-a'), class: "typo-btn-small typo-btn-small-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Éditer
      <% end %>
      <%= link_to site_path('tour-montparnasse'), class: "typo-btn-cancel" do %>
        ← Retour au Site
      <% end %>
    </div>
  </div>

  <div style="background-color: var(--white); border-radius: var(--space-md); ">
    <!-- Building Header Card -->
    <div style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); padding: var(--space-xl); border-radius: var(--space-md); color: white; margin-bottom: var(--space-xl);">
      <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: var(--space-lg);">
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Surface</p>
          <p class="typo-h4" style="color: white;">12,500 m²</p>
        </div>
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Niveaux</p>
          <p class="typo-h4" style="color: white;">8</p>
        </div>
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Année Construction</p>
          <p class="typo-h4" style="color: white;">2005</p>
        </div>
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Hauteur</p>
          <p class="typo-h4" style="color: white;">28.5 m</p>
        </div>
      </div>
    </div>

    <!-- Summary Statistics with Icons -->
    <div style="margin-bottom: var(--space-xl);">
      <h4 class="typo-h4" style="margin-bottom: var(--space-lg);">Vue d'Ensemble</h4>
      <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: var(--space-lg);">
        <div style="text-align: center; padding: var(--space-xl); background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); border-radius: var(--space-md); color: white; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
          <div style="display: flex; justify-content: center; margin-bottom: var(--space-md);">
            <%= render 'shared/hierarchy_icons', type: 'level', size: 32, color: 'white' %>
          </div>
          <p class="typo-h2" style="color: white; margin-bottom: var(--space-xs);">8</p>
          <p class="typo-body-small" style="color: rgba(255,255,255,0.9); text-transform: uppercase; font-size: 0.75rem; font-weight: 600;">Niveaux</p>
        </div>

        <div style="text-align: center; padding: var(--space-xl); background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); border-radius: var(--space-md); color: white; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
          <div style="display: flex; justify-content: center; margin-bottom: var(--space-md);">
            <%= render 'shared/hierarchy_icons', type: 'space', size: 32, color: 'white' %>
          </div>
          <p class="typo-h2" style="color: white; margin-bottom: var(--space-xs);">98</p>
          <p class="typo-body-small" style="color: rgba(255,255,255,0.9); text-transform: uppercase; font-size: 0.75rem; font-weight: 600;">Espaces</p>
        </div>

        <div style="text-align: center; padding: var(--space-xl); background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%); border-radius: var(--space-md); color: white; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
          <div style="display: flex; justify-content: center; margin-bottom: var(--space-md);">
            <%= render 'shared/hierarchy_icons', type: 'equipment', size: 32, color: 'white' %>
          </div>
          <p class="typo-h2" style="color: white; margin-bottom: var(--space-xs);">187</p>
          <p class="typo-body-small" style="color: rgba(255,255,255,0.9); text-transform: uppercase; font-size: 0.75rem; font-weight: 600;">Équipements</p>
        </div>
      </div>
    </div>

    <!-- Levels Section -->
    <div style="margin-bottom: var(--space-xl);">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-lg);">
        <div style="display: flex; align-items: center; gap: var(--space-sm);">
          <%= render 'shared/hierarchy_icons', type: 'level', size: 24, color: '#f59e0b' %>
          <h4 class="typo-h4">Niveaux de ce Bâtiment</h4>
        </div>
        <%= link_to new_building_level_path('building-a'), class: "typo-btn-success", style: "display: inline-flex; align-items: center; gap: var(--space-sm);" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nouveau Niveau
        <% end %>
      </div>

      <div style="display: grid; gap: var(--space-md);">
        <%
          # Mock levels data
          levels = [
            { id: 'level-rdc', name: 'Rez-de-chaussée', altitude: 0, area: 1500, spaces: 15, equipment: 28 },
            { id: 'level-1', name: 'Étage 1', altitude: 3.5, area: 1500, spaces: 12, equipment: 24 },
            { id: 'level-2', name: 'Étage 2', altitude: 7.0, area: 1500, spaces: 12, equipment: 23 },
            { id: 'level-3', name: 'Étage 3', altitude: 10.5, area: 1500, spaces: 12, equipment: 23 }
          ]
        %>

        <% levels.each do |level| %>
          <div style="padding: var(--space-lg); background-color: #f8f9fa; border-radius: var(--space-md); border-left: 4px solid #f59e0b;">
            <div style="display: flex; justify-content: space-between; align-items: start;">
              <div style="flex: 1;">
                <div style="display: flex; align-items: center; gap: var(--space-sm); margin-bottom: var(--space-xs);">
                  <%= render 'shared/hierarchy_icons', type: 'level', size: 20, color: '#f59e0b' %>
                  <h5 class="typo-h5" style="color: var(--dark-gray);"><%= level[:name] %></h5>
                </div>
                <p class="typo-body-small" style="color: var(--medium-gray); margin-bottom: var(--space-md);">
                  <%= number_with_delimiter(level[:area], delimiter: ' ') %> m² • Altitude: <%= level[:altitude] %> m
                </p>
                
                <div style="display: flex; gap: var(--space-lg);">
                  <div style="display: flex; align-items: center; gap: var(--space-xs);">
                    <%= render 'shared/hierarchy_icons', type: 'space', size: 16, color: '#8b5cf6' %>
                    <span class="typo-body-small typo-bold"><%= level[:spaces] %></span>
                    <span class="typo-body-small" style="color: var(--medium-gray);">Espaces</span>
                  </div>
                  <div style="display: flex; align-items: center; gap: var(--space-xs);">
                    <%= render 'shared/hierarchy_icons', type: 'equipment', size: 16, color: '#6b7280' %>
                    <span class="typo-body-small typo-bold"><%= level[:equipment] %></span>
                    <span class="typo-body-small" style="color: var(--medium-gray);">Équipements</span>
                  </div>
                </div>
              </div>
              
              <div style="display: flex; gap: var(--space-xs);">
                <%= link_to building_level_path('building-a', level[:id]), class: "typo-btn-small typo-btn-small-secondary" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  Voir
                <% end %>
                <%= link_to edit_building_level_path('building-a', level[:id]), class: "typo-btn-small typo-btn-small-primary" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Éditer
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Building Details -->
    <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--space-xl);">
      <!-- Technical Information -->
      <div>
        <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
          Informations Techniques
        </h4>
        <div style="display: grid; gap: var(--space-md);">
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Référence Cadastrale</p>
            <p class="typo-body-small typo-bold">AB-123-456</p>
          </div>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Type de Structure</p>
            <p class="typo-body-small typo-bold">Béton</p>
          </div>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Catégorie ERP</p>
            <p class="typo-body-small typo-bold">Type W - Bureaux</p>
          </div>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Capacité d'Accueil</p>
            <p class="typo-body-small typo-bold">500 personnes</p>
          </div>
        </div>
      </div>

      <!-- Energy Performance -->
      <div>
        <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
          Performance Énergétique
        </h4>
        <div style="display: grid; gap: var(--space-md);">
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Certification</p>
            <p class="typo-body-small typo-bold">HQE (Haute Qualité Environnementale)</p>
          </div>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Consommation Énergétique</p>
            <p class="typo-body-small typo-bold">120 kWh/m²/an</p>
          </div>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">DPE</p>
            <p class="typo-body-small typo-bold">C - Assez bon</p>
          </div>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">GES</p>
            <p class="typo-body-small typo-bold">D - Moyen</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
