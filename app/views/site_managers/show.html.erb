<% content_for :header, "Responsable de Site" %>

<div class="section">
  <div style="margin-bottom: var(--space-xl); display: flex; justify-content: space-between; align-items: center;">
    <div style="display: flex; align-items: center; gap: var(--space-md);">
      <div style="width: 64px; height: 64px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 1.5rem;">
        <%= @site_manager.full_name.split.map(&:first).join.upcase %>
      </div>
      <div>
        <h2 class="typo-h2" style="margin-bottom: var(--space-xs);"><%= @site_manager.full_name %></h2>
        <p class="typo-body-small" style="color: var(--medium-gray);">Responsable de Site</p>
        <% if @site_manager.invitation_pending? %>
          <span style="display: inline-block; padding: 4px 12px; background-color: #fff3cd; color: #856404; border-radius: 12px; font-size: 0.813rem; font-weight: 600; margin-top: 4px;">
            Invitation en attente
          </span>
        <% end %>
      </div>
    </div>
    <div style="display: flex; gap: var(--space-md);">
      <% if @site_manager.invitation_pending? %>
        <%= link_to resend_invitation_site_manager_path(@site_manager), method: :post, class: "typo-btn-small", style: "background-color: #ed8936; color: white; display: inline-flex; align-items: center; gap: 8px;" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Renvoyer l'invitation
        <% end %>
      <% end %>
      <%= link_to edit_site_manager_path(@site_manager), class: "typo-btn-small typo-btn-small-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
