<% content_for :header, "Responsable de Site" %>

<div class="section">
  <div style="margin-bottom: var(--space-xl); display: flex; justify-content: space-between; align-items: center;">
    <div style="display: flex; align-items: center; gap: var(--space-md);">
      <div style="width: 64px; height: 64px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 1.5rem;">
        JD
      </div>
      <div>
        <h2 class="typo-h2" style="margin-bottom: var(--space-xs);">Jean Dupont</h2>
        <p class="typo-body-small" style="color: var(--medium-gray);">Responsable de Site</p>
      </div>
    </div>
    <div style="display: flex; gap: var(--space-md);">
      <%= link_to edit_site_manager_path(1), class: "typo-btn-small typo-btn-small-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Éditer
      <% end %>
      <%= link_to site_managers_path, class: "typo-btn-cancel" do %>
        ← Retour à la liste
      <% end %>
    </div>
  </div>

  <!-- Stats Cards -->
  <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: var(--space-lg); margin-bottom: var(--space-xl);">
    <div style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.1) 100%); padding: var(--space-md); border-radius: var(--space-sm); border-left: 4px solid #667eea;">
      <p style="color: var(--medium-gray); font-size: 0.7rem; margin-bottom: 6px; text-transform: uppercase; font-weight: 600;">Sites Assignés</p>
      <p style="color: #667eea; font-size: 1.4rem; font-weight: 700; margin: 0;">3</p>
    </div>
    <div style="background: linear-gradient(135deg, rgba(72, 187, 120, 0.05) 0%, rgba(72, 187, 120, 0.1) 100%); padding: var(--space-md); border-radius: var(--space-sm); border-left: 4px solid #48bb78;">
      <p style="color: var(--medium-gray); font-size: 0.7rem; margin-bottom: 6px; text-transform: uppercase; font-weight: 600;">Contrats</p>
      <p style="color: #48bb78; font-size: 1.4rem; font-weight: 700; margin: 0;">24</p>
    </div>
    <div style="background: linear-gradient(135deg, rgba(237, 137, 54, 0.05) 0%, rgba(237, 137, 54, 0.1) 100%); padding: var(--space-md); border-radius: var(--space-sm); border-left: 4px solid #ed8936;">
      <p style="color: var(--medium-gray); font-size: 0.7rem; margin-bottom: 6px; text-transform: uppercase; font-weight: 600;">Équipements</p>
      <p style="color: #ed8936; font-size: 1.4rem; font-weight: 700; margin: 0;">187</p>
    </div>
    <div style="background: linear-gradient(135deg, rgba(245, 101, 101, 0.05) 0%, rgba(245, 101, 101, 0.1) 100%); padding: var(--space-md); border-radius: var(--space-sm); border-left: 4px solid #f56565;">
      <p style="color: var(--medium-gray); font-size: 0.7rem; margin-bottom: 6px; text-transform: uppercase; font-weight: 600;">Alertes Actives</p>
      <p style="color: #f56565; font-size: 1.4rem; font-weight: 700; margin: 0;">5</p>
    </div>
  </div>

  <div style="background-color: var(--white); border-radius: var(--space-md);">
    
    <!-- Contact Information -->
    <div style="margin-bottom: var(--space-xl);">
      <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
        Informations de Contact
      </h4>
      
      <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--space-lg);">
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase; margin-bottom: var(--space-xs);">Email</p>
          <p class="typo-body-small typo-bold">jean.dupont@example.com</p>
        </div>
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase; margin-bottom: var(--space-xs);">Téléphone</p>
          <p class="typo-body-small typo-bold">+33 6 12 34 56 78</p>
        </div>
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase; margin-bottom: var(--space-xs);">Statut</p>
          <span style="display: inline-block; padding: 4px 12px; background-color: #d4edda; color: #155724; border-radius: 12px; font-size: 0.813rem; font-weight: 600;">Actif</span>
        </div>
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase; margin-bottom: var(--space-xs);">Dernière Connexion</p>
          <p class="typo-body-small typo-bold">Il y a 2 heures</p>
        </div>
      </div>
    </div>

    <!-- Assigned Sites -->
    <div style="margin-bottom: var(--space-xl);">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-lg);">
        <h4 class="typo-h4" style="padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale); flex: 1;">
          Sites Assignés
        </h4>
        <%= link_to assign_sites_site_manager_path(1), class: "typo-btn-small", style: "background-color: #667eea; color: white; margin-left: var(--space-md);" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Gérer les Sites
        <% end %>
      </div>
      
      <div style="display: grid; gap: var(--space-md);">
        <% [
          {id: 1, name: 'Tour Montparnasse', city: 'Paris', contracts: 12, equipment: 89},
          {id: 2, name: 'Campus La Défense', city: 'La Défense', contracts: 8, equipment: 64},
          {id: 3, name: 'Site Industriel Lyon Nord', city: 'Lyon', contracts: 4, equipment: 34}
        ].each do |site| %>
          <div style="padding: var(--space-md); background-color: #f8f9fa; border-radius: var(--space-sm); border-left: 4px solid #667eea;">
            <div style="display: flex; justify-content: space-between; align-items: start;">
              <div>
                <p class="typo-body-small typo-bold" style="margin-bottom: var(--space-xs);"><%= site[:name] %></p>
                <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.813rem;"><%= site[:city] %></p>
              </div>
              <div style="display: flex; gap: var(--space-lg);">
                <div style="text-align: center;">
                  <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.7rem;">Contrats</p>
                  <p class="typo-body-small typo-bold" style="color: #48bb78;"><%= site[:contracts] %></p>
                </div>
                <div style="text-align: center;">
                  <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.7rem;">Équip.</p>
                  <p class="typo-body-small typo-bold" style="color: #ed8936;"><%= site[:equipment] %></p>
                </div>
                <%= link_to site_path(site[:id]), class: "typo-btn-small typo-btn-small-secondary" do %>
                  Voir
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
