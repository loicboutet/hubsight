<div class="mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center mb-4">
      <%= link_to site_manager_path(@site_manager), class: "text-indigo-600 hover:text-indigo-800 mr-4" do %>
        <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Retour
      <% end %>
      <h1 class="text-3xl font-bold text-gray-900">Assigner des Sites</h1>
    </div>
    <p class="text-gray-600">
      Assignez des sites à <strong><%= @site_manager.full_name %></strong> (<%= @site_manager.email %>)
    </p>
  </div>

  <!-- Site Assignment Form -->
  <%= form_with url: assign_sites_site_manager_path(@site_manager), method: :patch, local: true, class: "space-y-6" do |f| %>
    
    <!-- Sites Selection -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Sites Disponibles</h2>
      
      <% if @available_sites.any? %>
        <div class="space-y-3">
          <!-- Select All / Deselect All -->
          <div class="flex items-center pb-3 border-b border-gray-200">
            <label class="flex items-center cursor-pointer">
              <input type="checkbox" id="select_all" class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 h-4 w-4">
              <span class="ml-2 text-sm font-medium text-gray-700">Tout sélectionner / Tout désélectionner</span>
            </label>
          </div>

          <!-- Site Checkboxes -->
          <% @available_sites.each do |site| %>
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <%= check_box_tag 'site_ids[]', 
                                   site.id, 
                                   @assigned_site_ids.include?(site.id),
                                   class: "site-checkbox rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 h-4 w-4",
                                   id: "site_#{site.id}" %>
              </div>
              <div class="ml-3">
                <label for="site_<%= site.id %>" class="font-medium text-gray-900 cursor-pointer">
                  <%= site.name %>
                </label>
                <p class="text-sm text-gray-500">
                  <%= site.site_type_label %> • <%= site.city %> • <%= site.region_label %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
          <p class="mt-2 text-gray-500">Aucun site disponible dans votre organisation</p>
        </div>
      <% end %>
    </div>

    <!-- Summary -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
        <div class="ml-3">
          <p class="text-sm text-blue-700">
            <strong id="selected_count"><%= @assigned_site_ids.length %></strong> site(s) sélectionné(s)
          </p>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex justify-end space-x-3">
      <%= link_to "Annuler", 
                  site_manager_path(@site_manager), 
                  class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= f.submit "Enregistrer les Assignations", 
                   class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</div>

<!-- JavaScript for Select All and Counter -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const selectAllCheckbox = document.getElementById('select_all');
    const siteCheckboxes = document.querySelectorAll('.site-checkbox');
    const selectedCount = document.getElementById('selected_count');
    
    // Update counter
    function updateCounter() {
      const count = Array.from(siteCheckboxes).filter(cb => cb.checked).length;
      selectedCount.textContent = count;
    }
    
    // Select/Deselect All
    if (selectAllCheckbox) {
      selectAllCheckbox.addEventListener('change', function() {
        siteCheckboxes.forEach(checkbox => {
          checkbox.checked = this.checked;
        });
        updateCounter();
      });
    }
    
    // Individual checkbox change
    siteCheckboxes.forEach(checkbox => {
      checkbox.addEventListener('change', function() {
        updateCounter();
        
        // Update "select all" checkbox state
        const allChecked = Array.from(siteCheckboxes).every(cb => cb.checked);
        const noneChecked = Array.from(siteCheckboxes).every(cb => !cb.checked);
        
        if (selectAllCheckbox) {
          selectAllCheckbox.checked = allChecked;
          selectAllCheckbox.indeterminate = !allChecked && !noneChecked;
        }
      });
    });
    
    // Initial counter update
    updateCounter();
  });
</script>
