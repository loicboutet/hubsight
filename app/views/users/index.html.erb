<% content_for :header, "Gestion des utilisateurs" %>

<div class="section">
  <div class="page-header-responsive">
    <div>
      <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Gestion des utilisateurs</h2>
      <p class="typo-body-small">Gérer les utilisateurs de votre organisation</p>
    </div>
    <a href="<%= new_user_path %>" class="typo-btn-success" style="display: inline-flex; align-items: center; gap: var(--space-sm);">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Nouvel utilisateur
    </a>
  </div>

  <div style="background-color: var(--white); border-radius: var(--space-md);">
    <!-- Filters Section -->
    <div style="margin-bottom: var(--space-xl); padding: var(--space-lg); background-color: #f8f9fa; border-radius: var(--space-sm);">
      <style>
        @media (max-width: 1200px) {
          .filters-grid-users { grid-template-columns: 1fr 1fr auto auto !important; }
        }
        @media (max-width: 768px) {
          .filters-grid-users { grid-template-columns: 1fr !important; }
        }
      </style>
      <div class="filters-grid-users" style="display: grid; grid-template-columns: 1fr 1fr 1fr auto auto; gap: var(--space-md); align-items: end;">
        <div>
          <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-sm);">Recherche</label>
          <input type="text" placeholder="Nom, email..." style="width: 100%; padding: 10px; border: 1px solid var(--light-gray); border-radius: var(--space-sm);">
        </div>
        <div>
          <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-sm);">Rôle</label>
          <select style="width: 100%; padding: 10px; border: 1px solid var(--light-gray); border-radius: var(--space-sm); background-color: white;">
            <option>Tous</option>
            <option>Gestionnaire de Portefeuille</option>
            <option>Gestionnaire de Site</option>
          </select>
        </div>
        <div>
          <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-sm);">Statut</label>
          <select style="width: 100%; padding: 10px; border: 1px solid var(--light-gray); border-radius: var(--space-sm); background-color: white;">
            <option>Tous</option>
            <option>Actif</option>
            <option>Inactif</option>
          </select>
        </div>
        <button type="button" class="typo-btn-cancel" style="display: inline-flex; align-items: center; gap: var(--space-sm);">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
          Effacer
        </button>
        <button type="submit" class="typo-btn-success" style="display: inline-flex; align-items: center; gap: var(--space-sm);">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
          </svg>
          Filtrer
        </button>
      </div>
    </div>

    <!-- Users Table -->
    <div style="overflow-x: auto;">
      <table style="width: 100%; border-collapse: collapse;">
        <thead>
          <tr style="background-color: #f8f9fa; border-bottom: 2px solid var(--pink-pale);">
            <th style="padding: var(--space-md); text-align: left; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">UTILISATEUR</th>
            <th style="padding: var(--space-md); text-align: left; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">EMAIL</th>
            <th style="padding: var(--space-md); text-align: left; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">RÔLE</th>
            <th style="padding: var(--space-md); text-align: left; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">SITES ASSIGNÉS</th>
            <th style="padding: var(--space-md); text-align: center; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">STATUT</th>
            <th style="padding: var(--space-md); text-align: right; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">ACTIONS</th>
          </tr>
        </thead>
        <tbody>
          <% [
            {id: 1, name: "Marie Dubois", email: "marie.dubois@example.com", role: "Gestionnaire de Site", sites: "Tour Eiffel, Le Louvre", active: true},
            {id: 2, name: "Jean Martin", email: "jean.martin@example.com", role: "Gestionnaire de Portefeuille", sites: "Tous les sites", active: true},
            {id: 3, name: "Sophie Bernard", email: "sophie.bernard@example.com", role: "Gestionnaire de Site", sites: "Arc de Triomphe", active: true},
            {id: 4, name: "Pierre Lefebvre", email: "pierre.lefebvre@example.com", role: "Gestionnaire de Site", sites: "Musée d'Orsay", active: false},
            {id: 5, name: "Anne Moreau", email: "anne.moreau@example.com", role: "Gestionnaire de Portefeuille", sites: "Tous les sites", active: true},
            {id: 6, name: "Thomas Petit", email: "thomas.petit@example.com", role: "Gestionnaire de Site", sites: "Notre-Dame", active: true},
            {id: 7, name: "Caroline Dupont", email: "caroline.dupont@example.com", role: "Gestionnaire de Site", sites: "Sacré-Cœur", active: false},
            {id: 8, name: "Laurent Rousseau", email: "laurent.rousseau@example.com", role: "Gestionnaire de Portefeuille", sites: "Tous les sites", active: true},
          ].each_with_index do |user, index| %>
            <tr style="border-bottom: 1px solid #e9ecef; <%= 'background-color: #fafbfc;' if index.even? %>">
              <!-- User Name -->
              <td style="padding: var(--space-md);">
                <div style="display: flex; align-items: center; gap: var(--space-md);">
                  <div style="width: 40px; height: 40px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 0.875rem; flex-shrink: 0;">
                    <%= user[:name].split(' ').map { |n| n[0] }.join %>
                  </div>
                  <div>
                    <%= link_to user_path(user[:id]), style: "text-decoration: none;" do %>
                      <p class="typo-body-small typo-bold" style="margin-bottom: 2px; color: var(--coral-primary);">
                        <%= user[:name] %>
                      </p>
                    <% end %>
                  </div>
                </div>
              </td>
              
              <!-- Email -->
              <td style="padding: var(--space-md);">
                <p class="typo-body-small" style="color: #666;"><%= user[:email] %></p>
              </td>
              
              <!-- Role -->
              <td style="padding: var(--space-md);">
                <% if user[:role] == "Gestionnaire de Portefeuille" %>
                  <span style="display: inline-block; padding: 4px 12px; background-color: #e7f3ff; color: #0066cc; border-radius: 12px; font-size: 0.813rem; font-weight: 600;">
                    <%= user[:role] %>
                  </span>
                <% else %>
                  <span style="display: inline-block; padding: 4px 12px; background-color: #f3e8ff; color: #7c3aed; border-radius: 12px; font-size: 0.813rem; font-weight: 600;">
                    <%= user[:role] %>
                  </span>
                <% end %>
              </td>
              
              <!-- Sites Assigned -->
              <td style="padding: var(--space-md);">
                <p class="typo-body-small" style="color: #666; font-size: 0.813rem;"><%= user[:sites] %></p>
              </td>
              
              <!-- Status -->
              <td style="padding: var(--space-md); text-align: center;">
                <% if user[:active] %>
                  <span style="display: inline-flex; align-items: center; gap: 4px; padding: 4px 10px; background-color: #d4edda; color: #155724; border-radius: 12px; font-size: 0.75rem; font-weight: 600;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" fill="currentColor" viewBox="0 0 16 16">
                      <circle cx="8" cy="8" r="8" fill="currentColor"/>
                    </svg>
                    Actif
                  </span>
                <% else %>
                  <span style="display: inline-flex; align-items: center; gap: 4px; padding: 4px 10px; background-color: #f8d7da; color: #721c24; border-radius: 12px; font-size: 0.75rem; font-weight: 600;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="8" fill="currentColor" viewBox="0 0 16 16">
                      <circle cx="8" cy="8" r="8" fill="currentColor"/>
                    </svg>
                    Inactif
                  </span>
                <% end %>
              </td>
              
              <!-- Actions -->
              <td style="padding: var(--space-md);">
                <div style="display: flex; gap: var(--space-xs); justify-content: flex-end;">
                  <%= link_to user_path(user[:id]), class: "typo-btn-small typo-btn-small-secondary" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    Voir
                  <% end %>
                  <%= link_to edit_user_path(user[:id]), class: "typo-btn-small typo-btn-small-primary" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Modifier
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <div style="margin-top: var(--space-xl);">
      <%= render 'shared/pagination', 
        current_page: 1, 
        total_pages: 1, 
        total_count: 8, 
        per_page: 15,
        path: users_path %>
    </div>
  </div>
</div>
