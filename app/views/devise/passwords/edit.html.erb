<div style="text-align: center; margin-bottom: var(--space-2xl);">
  <%= link_to root_path, style: "display: inline-block; margin-bottom: var(--space-lg);" do %>
    <%= image_tag "hugsight_logo.png", alt: "HubSight Logo", style: "height: 60px; width: auto; display: block;" %>
  <% end %>
  <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Nouveau Mot de Passe</h2>
  <p class="typo-body-small typo-color-secondary">Entrez votre nouveau mot de passe</p>
</div>

<div class="section" style="background-color: var(--white); border-radius: var(--space-md); padding: var(--space-xl); box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div style="margin-bottom: var(--space-lg);">
      <%= f.label :password, "Nouveau Mot de Passe", class: "typo-body-small typo-bold", style: "display: block; margin-bottom: var(--space-sm);" %>
      <% if @minimum_password_length %>
        <p class="typo-body-small" style="color: var(--medium-gray); margin-bottom: var(--space-sm);"><%= @minimum_password_length %> caract√®res minimum</p>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Entrez votre nouveau mot de passe", style: "width: 100%; padding: 12px; border: 1px solid var(--light-gray); border-radius: var(--space-sm); font-size: 1rem;" %>
    </div>

    <div style="margin-bottom: var(--space-xl);">
      <%= f.label :password_confirmation, "Confirmer le Mot de Passe", class: "typo-body-small typo-bold", style: "display: block; margin-bottom: var(--space-sm);" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmez votre nouveau mot de passe", style: "width: 100%; padding: 12px; border: 1px solid var(--light-gray); border-radius: var(--space-sm); font-size: 1rem;" %>
    </div>

    <div style="margin-bottom: var(--space-lg);">
      <%= f.submit "Changer le Mot de Passe", class: "typo-btn-success", style: "width: 100%; cursor: pointer; justify-content: center;" %>
    </div>

    <%= render "devise/shared/links" %>
  <% end %>
</div>
