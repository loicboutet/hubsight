<div style="text-align: center; padding-top: var(--space-lg); border-top: 1px solid var(--pink-pale);">
  <%- if controller_name != 'sessions' %>
    <p class="typo-body-small" style="margin-bottom: var(--space-sm);">
      <%= link_to "Déjà un compte? Se connecter", new_session_path(resource_name), class: "typo-link-primary" %>
    </p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="typo-body-small" style="margin-bottom: var(--space-sm);">
      <%= link_to "Créer un compte", new_registration_path(resource_name), class: "typo-link-primary" %>
    </p>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <p class="typo-body-small" style="margin-bottom: var(--space-sm);">
      <%= link_to "Mot de passe oublié?", new_password_path(resource_name), class: "typo-link-primary" %>
    </p>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <p class="typo-body-small" style="margin-bottom: var(--space-sm);">
      <%= link_to "Vous n'avez pas reçu d'instructions de confirmation?", new_confirmation_path(resource_name), class: "typo-link-primary" %>
    </p>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <p class="typo-body-small" style="margin-bottom: var(--space-sm);">
      <%= link_to "Vous n'avez pas reçu d'instructions de déverrouillage?", new_unlock_path(resource_name), class: "typo-link-primary" %>
    </p>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <p class="typo-body-small" style="margin-bottom: var(--space-sm);">
        <%= button_to "Se connecter avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "typo-btn-cancel", style: "cursor: pointer;" %>
      </p>
    <% end %>
  <% end %>
</div>
