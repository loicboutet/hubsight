<% content_for :header, "Espaces" %>

<div class="section">
  <div style="margin-bottom: var(--space-xl); display: flex; justify-content: space-between; align-items: center;">
    <div>
      <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Espaces - <%= @level.name %></h2>
      <p class="typo-body-small">Liste des espaces de ce niveau</p>
    </div>
    <%= link_to new_level_space_path(@level), class: "typo-btn-success" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Nouvel Espace
    <% end %>
  </div>

  <% if @spaces.any? %>
    <div style="display: grid; gap: var(--space-md);">
      <% @spaces.each do |space| %>
        <div style="padding: var(--space-lg); background-color: #f8f9fa; border-radius: var(--space-md); border-left: 4px solid #8b5cf6;">
          <div style="display: flex; justify-content: space-between; align-items: start;">
            <div style="flex: 1;">
              <div style="display: flex; align-items: center; gap: var(--space-sm); margin-bottom: var(--space-xs);">
                <%= render 'shared/hierarchy_icons', type: 'space', size: 20, color: '#8b5cf6' %>
                <%= link_to space_path(space), style: "text-decoration: none;" do %>
                  <h5 class="typo-h5" style="color: var(--coral-primary); margin-bottom: 0;"><%= space.name %></h5>
                <% end %>
                <% if space.space_type %>
                  <span style="display: inline-block; padding: 4px 10px; background-color: #f3e8ff; color: #7c3aed; border-radius: 4px; font-size: 0.75rem; font-weight: 600;">
                    <%= space.space_type %>
                  </span>
                <% end %>
              </div>
              <p class="typo-body-small" style="color: var(--medium-gray); margin-bottom: var(--space-md);">
                <% if space.area %>
                  <%= space.formatted_area %>
                <% end %>
                <% if space.capacity %>
                  • Capacité: <%= space.capacity %> <%= space.capacity > 1 ? 'personnes' : 'personne' %>
                <% end %>
              </p>
              
              <div style="display: flex; align-items: center; gap: var(--space-xs);">
                <%= render 'shared/hierarchy_icons', type: 'equipment', size: 16, color: '#6b7280' %>
                <span class="typo-body-small typo-bold"><%= space.equipment_count %></span>
                <span class="typo-body-small" style="color: var(--medium-gray);">Équipements</span>
              </div>
            </div>
            
            <div style="display: flex; gap: var(--space-xs); flex-wrap: wrap;">
              <%= link_to space_path(space), class: "typo-btn-small typo-btn-small-secondary" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                Voir
              <% end %>
              <%= link_to edit_space_path(space), class: "typo-btn-small typo-btn-small-primary" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Éditer
              <% end %>
              <button type="button"
                data-action="click->deletion-confirmation#openModal"
                data-modal-id="deletion-modal-space-<%= space.id %>"
                class="typo-btn-small typo-btn-small-danger">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div style="text-align: center; padding: var(--space-xl); background-color: #f8f9fa; border-radius: var(--space-md);">
      <p class="typo-body">Aucun espace pour ce niveau</p>
      <%= link_to new_level_space_path(@level), class: "typo-btn-success", style: "margin-top: var(--space-md);" do %>
        Créer le premier espace
      <% end %>
    </div>
  <% end %>

  <div style="margin-top: var(--space-xl);">
    <%= link_to level_path(@level), class: "typo-btn-cancel" do %>
      ← Retour au Niveau
    <% end %>
  </div>
</div>

<!-- Deletion Modals for Spaces -->
<% @spaces.each do |space| %>
  <%
    equipment_count = space.equipment.count rescue 0
  %>
  
  <%= render 'shared/deletion_confirmation_modal',
    entity_type: "l'espace",
    entity_name: "#{@level.name} - #{space.name}",
    entity_id: "space-#{space.id}",
    affected_items: {
      'équipements' => equipment_count
    },
    requires_extra_confirmation: false,
    delete_path: space_path(space)
  %>
<% end %>

<!-- Initialize deletion confirmation controller -->
<div data-controller="deletion-confirmation"></div>
