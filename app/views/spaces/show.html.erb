<% content_for :header, "Espace" %>

<div class="section">
  <!-- Breadcrumb Navigation -->
  <% site_icon = capture { render 'shared/hierarchy_icons', type: 'site', size: 16 } %>
  <% building_icon = capture { render 'shared/hierarchy_icons', type: 'building', size: 16 } %>
  <% level_icon = capture { render 'shared/hierarchy_icons', type: 'level', size: 16 } %>
  <% space_icon = capture { render 'shared/hierarchy_icons', type: 'space', size: 16 } %>
  <%= render 'shared/breadcrumb', path: [
    { name: 'Sites', url: sites_path, icon: site_icon },
    { name: @site.name, url: site_path(@site), icon: site_icon },
    { name: @building.name, url: building_path(@building), icon: building_icon },
    { name: @level.name, url: level_path(@level), icon: level_icon },
    { name: @space.name, url: nil, icon: space_icon }
  ] %>

  <!-- Header Section -->
  <div style="margin-bottom: var(--space-xl); display: flex; flex-wrap: wrap; justify-content: space-between; align-items: center; gap: var(--space-md);">
    <div style="display: flex; align-items: center; gap: var(--space-md); flex: 1; min-width: 300px;">
      <%= render 'shared/hierarchy_icons', type: 'space', size: 32, color: '#8b5cf6' %>
      <div>
        <h2 class="typo-h2" style="margin-bottom: var(--space-xs);"><%= @space.name %></h2>
        <p class="typo-body-small" style="color: var(--medium-gray);">
          <%= @level.name %> - <%= @building.name %> - <%= @site.name %>
        </p>
      </div>
    </div>
    <div style="display: flex; gap: var(--space-md); flex-wrap: wrap;">
      <%= link_to edit_space_path(@space), class: "typo-btn-small typo-btn-small-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Éditer
      <% end %>
      <%= link_to level_path(@level), class: "typo-btn-cancel" do %>
        ← Retour au Niveau
      <% end %>
      <%= link_to space_path(@space), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer cet espace ?' }, class: "typo-btn-small typo-btn-small-danger" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Supprimer
      <% end %>
    </div>
  </div>

  <!-- Space Information Cards -->
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: var(--space-md); margin-bottom: var(--space-xl);">
    <% if @space.space_type.present? %>
      <div style="background: linear-gradient(135deg, rgba(139, 92, 246, 0.05) 0%, rgba(139, 92, 246, 0.1) 100%); padding: var(--space-md); border-radius: var(--space-sm); border-left: 4px solid #8b5cf6;">
        <p style="color: var(--medium-gray); font-size: 0.7rem; margin-bottom: 6px; text-transform: uppercase; font-weight: 600;">Type</p>
        <p style="color: #8b5cf6; font-size: 1.2rem; font-weight: 700; margin: 0;"><%= @space.space_type %></p>
      </div>
    <% end %>
    
    <% if @space.area %>
      <div style="background: linear-gradient(135deg, rgba(34, 197, 94, 0.05) 0%, rgba(34, 197, 94, 0.1) 100%); padding: var(--space-md); border-radius: var(--space-sm); border-left: 4px solid #22c55e;">
        <p style="color: var(--medium-gray); font-size: 0.7rem; margin-bottom: 6px; text-transform: uppercase; font-weight: 600;">Surface</p>
        <p style="color: #22c55e; font-size: 1.2rem; font-weight: 700; margin: 0;"><%= @space.formatted_area %></p>
      </div>
    <% end %>
    
    <% if @space.capacity %>
      <div style="background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(59, 130, 246, 0.1) 100%); padding: var(--space-md); border-radius: var(--space-sm); border-left: 4px solid #3b82f6;">
        <p style="color: var(--medium-gray); font-size: 0.7rem; margin-bottom: 6px; text-transform: uppercase; font-weight: 600;">Capacité</p>
        <p style="color: #3b82f6; font-size: 1.2rem; font-weight: 700; margin: 0;"><%= @space.capacity %> pers.</p>
      </div>
    <% end %>
    
    <div style="background: linear-gradient(135deg, rgba(239, 68, 68, 0.05) 0%, rgba(239, 68, 68, 0.1) 100%); padding: var(--space-md); border-radius: var(--space-sm); border-left: 4px solid #ef4444;">
      <p style="color: var(--medium-gray); font-size: 0.7rem; margin-bottom: 6px; text-transform: uppercase; font-weight: 600;">Équipements</p>
      <p style="color: #ef4444; font-size: 1.2rem; font-weight: 700; margin: 0;"><%= @space.equipment_count %></p>
    </div>
  </div>

  <!-- Space Details in Grid -->
  <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--space-xl); margin-bottom: var(--space-xl);">
    <!-- Basic Information -->
    <div>
      <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
        Informations Générales
      </h4>
      <div style="display: grid; gap: var(--space-md);">
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Nom</p>
          <p class="typo-body-small typo-bold"><%= @space.name %></p>
        </div>
        <% if @space.space_type %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Type d'Espace</p>
            <p class="typo-body-small typo-bold"><%= @space.space_type %></p>
          </div>
        <% end %>
        <% if @space.primary_use %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Utilisation Principale</p>
            <p class="typo-body-small typo-bold"><%= @space.primary_use %></p>
          </div>
        <% end %>
        <% if @space.secondary_use %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Utilisation Secondaire</p>
            <p class="typo-body-small typo-bold"><%= @space.secondary_use %></p>
          </div>
        <% end %>
        <% if @space.grouping_zone %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Zone de Regroupement</p>
            <p class="typo-body-small typo-bold"><%= @space.grouping_zone %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Physical Characteristics -->
    <div>
      <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
        Caractéristiques Physiques
      </h4>
      <div style="display: grid; gap: var(--space-md);">
        <% if @space.area %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Surface</p>
            <p class="typo-body-small typo-bold"><%= @space.formatted_area %></p>
          </div>
        <% end %>
        <% if @space.ceiling_height %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Hauteur sous Plafond</p>
            <p class="typo-body-small typo-bold"><%= @space.formatted_ceiling_height %></p>
          </div>
        <% end %>
        <% if @space.floor_covering %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Revêtement de Sol</p>
            <p class="typo-body-small typo-bold"><%= @space.floor_covering %></p>
          </div>
        <% end %>
        <% if @space.wall_covering %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Revêtement Mural</p>
            <p class="typo-body-small typo-bold"><%= @space.wall_covering %></p>
          </div>
        <% end %>
        <% if @space.ceiling_type %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Type de Plafond</p>
            <p class="typo-body-small typo-bold"><%= @space.ceiling_type %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Technical Infrastructure -->
    <div>
      <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
        Infrastructure Technique
      </h4>
      <div style="display: grid; gap: var(--space-md);">
        <% if @space.water_points && @space.water_points > 0 %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Points d'Eau</p>
            <p class="typo-body-small typo-bold"><%= @space.water_points %></p>
          </div>
        <% end %>
        <% if @space.electrical_outlets && @space.electrical_outlets > 0 %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Prises Électriques</p>
            <p class="typo-body-small typo-bold"><%= @space.electrical_outlets %></p>
          </div>
        <% end %>
        <% if @space.network_connectivity %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Connectivité Réseau</p>
            <p class="typo-body-small typo-bold"><%= @space.network_connectivity %></p>
          </div>
        <% end %>
        <% if @space.ventilation %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Ventilation</p>
            <p class="typo-body-small typo-bold"><%= @space.ventilation %></p>
          </div>
        <% end %>
        <% if @space.natural_lighting %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Éclairage Naturel</p>
            <p class="typo-body-small typo-bold"><%= @space.natural_lighting %>%</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Comfort & Accessibility -->
    <div>
      <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
        Confort & Accessibilité
      </h4>
      <div style="display: grid; gap: var(--space-md);">
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Chauffage</p>
          <p class="typo-body-small typo-bold"><%= @space.heating ? 'Oui' : 'Non' %></p>
        </div>
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Climatisation</p>
          <p class="typo-body-small typo-bold"><%= @space.air_conditioning ? 'Oui' : 'Non' %></p>
        </div>
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Fenêtres</p>
          <p class="typo-body-small typo-bold"><%= @space.has_windows ? 'Oui' : 'Non' %></p>
        </div>
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Accessible PMR</p>
          <p class="typo-body-small typo-bold"><%= @space.pmr_accessibility ? 'Oui' : 'Non' %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Data Source Tracking -->
  <% if @space.created_by_name || @space.updated_by_name %>
    <div style="margin-top: var(--space-xl); padding-top: var(--space-lg); border-top: 1px solid var(--pink-pale);">
      <h4 class="typo-h4" style="margin-bottom: var(--space-md);">Traçabilité</h4>
      <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--space-md);">
        <% if @space.created_by_name %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem;">Créé par</p>
            <p class="typo-body-small typo-bold"><%= @space.created_by_name %> le <%= l(@space.created_at, format: :long) %></p>
          </div>
        <% end %>
        <% if @space.updated_by_name %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem;">Dernière modification</p>
            <p class="typo-body-small typo-bold"><%= @space.updated_by_name %> le <%= l(@space.updated_at, format: :long) %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
