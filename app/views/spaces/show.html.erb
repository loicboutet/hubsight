<% content_for :header, "Espace" %>

<div class="section">
  <!-- Breadcrumb Navigation -->
  <%= render 'shared/breadcrumb', path: [
    { name: 'Sites', url: sites_path, icon: render('shared/hierarchy_icons', type: 'site', size: 16) },
    { name: 'Tour Montparnasse', url: site_path('tour-montparnasse'), icon: render('shared/hierarchy_icons', type: 'site', size: 16) },
    { name: 'Bât. A', url: site_building_path('tour-montparnasse', 'building-a'), icon: render('shared/hierarchy_icons', type: 'building', size: 16) },
    { name: 'RDC', url: building_level_path('building-a', 'level-rdc'), icon: render('shared/hierarchy_icons', type: 'level', size: 16) },
    { name: 'Espaces', url: level_spaces_path('level-rdc'), icon: render('shared/hierarchy_icons', type: 'space', size: 16) },
    { name: 'Bureau 101', url: nil, icon: render('shared/hierarchy_icons', type: 'space', size: 16) }
  ] %>

  <!-- Header Section -->
  <div style="margin-bottom: var(--space-xl); display: flex; justify-content: space-between; align-items: center;">
    <div style="display: flex; align-items: center; gap: var(--space-md);">
      <%= render 'shared/hierarchy_icons', type: 'space', size: 32, color: '#8b5cf6' %>
      <div>
        <h2 class="typo-h2" style="margin-bottom: var(--space-xs);">Bureau 101</h2>
        <p class="typo-body-small" style="color: var(--medium-gray);">RDC - Bâtiment A - Tour Montparnasse</p>
      </div>
    </div>
    <div style="display: flex; gap: var(--space-md);">
      <%= link_to edit_level_space_path('level-rdc', 'space-101'), class: "typo-btn-small typo-btn-small-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Éditer
      <% end %>
      <%= link_to building_level_path('building-a', 'level-rdc'), class: "typo-btn-cancel" do %>
        ← Retour au Niveau
      <% end %>
    </div>
  </div>

  <div style="background-color: var(--white); border-radius: var(--space-md); ">
    <!-- Space Header Card -->
    <div style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); padding: var(--space-xl); border-radius: var(--space-md); color: white; margin-bottom: var(--space-xl);">
      <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: var(--space-lg);">
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Type</p>
          <p class="typo-h4" style="color: white;">Bureau</p>
        </div>
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Surface</p>
          <p class="typo-h4" style="color: white;">25 m²</p>
        </div>
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Capacité</p>
          <p class="typo-h4" style="color: white;">2 pers.</p>
        </div>
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Équipements</p>
          <p class="typo-h4" style="color: white;">3</p>
        </div>
      </div>
    </div>

    <!-- Equipment Section -->
    <div style="margin-bottom: var(--space-xl);">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-lg);">
        <div style="display: flex; align-items: center; gap: var(--space-sm);">
          <%= render 'shared/hierarchy_icons', type: 'equipment', size: 24, color: '#6b7280' %>
          <h4 class="typo-h4">Équipements de cet Espace</h4>
        </div>
        <%= link_to new_space_equipment_path('space-101'), class: "typo-btn-success", style: "display: inline-flex; align-items: center; gap: var(--space-sm);" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nouvel Équipement
        <% end %>
      </div>

      <div style="display: grid; gap: var(--space-md);">
        <%
          # Mock equipment data
          equipment_list = [
            { id: 'eq-001', name: 'Climatiseur Daikin AC-500', type: 'Climatisation', manufacturer: 'Daikin', status: 'Actif', last_maintenance: '15/12/2024' },
            { id: 'eq-002', name: 'Détecteur Incendie FireGuard', type: 'Sécurité Incendie', manufacturer: 'Honeywell', status: 'Actif', last_maintenance: '10/01/2025' },
            { id: 'eq-003', name: 'Luminaire LED Panel 60x60', type: 'Éclairage', manufacturer: 'Philips', status: 'Actif', last_maintenance: '05/01/2025' }
          ]
        %>

        <% equipment_list.each do |equipment| %>
          <div style="padding: var(--space-lg); background-color: #f8f9fa; border-radius: var(--space-md); border-left: 4px solid #6b7280;">
            <div style="display: flex; justify-content: space-between; align-items: start;">
              <div style="flex: 1;">
                <div style="display: flex; align-items: center; gap: var(--space-sm); margin-bottom: var(--space-xs);">
                  <%= render 'shared/hierarchy_icons', type: 'equipment', size: 20, color: '#6b7280' %>
                  <h5 class="typo-h5" style="color: var(--dark-gray);"><%= equipment[:name] %></h5>
                  <span style="display: inline-block; padding: 4px 10px; background-color: #d4edda; color: #155724; border-radius: 4px; font-size: 0.75rem; font-weight: 600;">
                    <%= equipment[:status] %>
                  </span>
                </div>
                <p class="typo-body-small" style="color: var(--medium-gray); margin-bottom: var(--space-sm);">
                  <%= equipment[:type] %> • <%= equipment[:manufacturer] %>
                </p>
                <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem;">
                  Dernière maintenance: <%= equipment[:last_maintenance] %>
                </p>
              </div>
              
              <div style="display: flex; gap: var(--space-xs);">
                <%= link_to space_equipment_path('space-101', equipment[:id]), class: "typo-btn-small typo-btn-small-secondary" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  Voir
                <% end %>
                <%= link_to edit_space_equipment_path('space-101', equipment[:id]), class: "typo-btn-small typo-btn-small-primary" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Éditer
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Space Details -->
    <div style="margin-bottom: var(--space-xl);">
      <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
        Caractéristiques de l'Espace
      </h4>
      <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: var(--space-xl);">
        <!-- Basic Info -->
        <div>
          <h5 class="typo-h5" style="margin-bottom: var(--space-md); color: var(--medium-gray);">Informations de Base</h5>
          <div style="display: grid; gap: var(--space-md);">
            <div>
              <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Type d'Espace</p>
              <p class="typo-body-small typo-bold">Bureau</p>
            </div>
            <div>
              <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Surface</p>
              <p class="typo-body-small typo-bold">25 m²</p>
            </div>
            <div>
              <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Hauteur sous Plafond</p>
              <p class="typo-body-small typo-bold">2.8 m</p>
            </div>
            <div>
              <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Capacité</p>
              <p class="typo-body-small typo-bold">2 personnes</p>
            </div>
          </div>
        </div>

        <!-- Technical Info -->
        <div>
          <h5 class="typo-h5" style="margin-bottom: var(--space-md); color: var(--medium-gray);">Équipements Techniques</h5>
          <div style="display: grid; gap: var(--space-md);">
            <div>
              <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Points d'Eau</p>
              <p class="typo-body-small typo-bold">0</p>
            </div>
            <div>
              <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Prises Électriques</p>
              <p class="typo-body-small typo-bold">4</p>
            </div>
            <div>
              <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Éclairage Naturel</p>
              <p class="typo-body-small typo-bold">60%</p>
            </div>
            <div>
              <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Ventilation</p>
              <p class="typo-body-small typo-bold">Mécanique</p>
            </div>
          </div>
        </div>

        <!-- Amenities -->
        <div>
          <h5 class="typo-h5" style="margin-bottom: var(--space-md); color: var(--medium-gray);">Équipements et Confort</h5>
          <div style="display: grid; gap: var(--space-sm);">
            <div style="display: flex; align-items: center; gap: var(--space-xs);">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="#10b981">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="typo-body-small">Fenêtres</span>
            </div>
            <div style="display: flex; align-items: center; gap: var(--space-xs);">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="#10b981">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="typo-body-small">Chauffage</span>
            </div>
            <div style="display: flex; align-items: center; gap: var(--space-xs);">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="#10b981">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="typo-body-small">Climatisation</span>
            </div>
            <div style="display: flex; align-items: center; gap: var(--space-xs);">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="#10b981">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="typo-body-small">Connectivité Réseau</span>
            </div>
            <div style="display: flex; align-items: center; gap: var(--space-xs);">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="#10b981">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="typo-body-small">Accessibilité PMR</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Finishes -->
    <div>
      <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
        Finitions
      </h4>
      <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: var(--space-md);">
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Revêtement de Sol</p>
          <p class="typo-body-small typo-bold">Moquette</p>
        </div>
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Revêtement Mural</p>
          <p class="typo-body-small typo-bold">Peinture</p>
        </div>
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Type de Plafond</p>
          <p class="typo-body-small typo-bold">Plafond suspendu</p>
        </div>
      </div>
    </div>
  </div>
</div>
