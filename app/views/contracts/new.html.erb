<% content_for :header, "Contrats" %>

<div class="section">
  <!-- Breadcrumb Navigation -->
  <div style="margin-bottom: var(--space-xl);">
    <%= render 'shared/breadcrumb', path: [
      { name: 'Contrats', url: contracts_path },
      { name: 'Nouveau', url: nil }
    ] %>
  </div>

  <div class="page-header-responsive">
    <div>
      <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Nouveau Contrat</h2>
      <p class="typo-body-small">Créez un nouveau contrat en téléchargeant un PDF pour extraction automatique, ou en saisissant manuellement toutes les informations</p>
    </div>
  </div>

  <%= render 'comprehensive_form', contract: @contract %>
</div>
