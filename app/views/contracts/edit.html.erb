<% content_for :header, "Contrats" %>

<div class="section">
  <!-- Breadcrumb Navigation -->
  <div style="margin-bottom: var(--space-xl);">
    <%= render 'shared/breadcrumb', path: [
      { name: 'Contrats', url: contracts_path },
      { name: @contract.contract_number, url: contract_path(@contract) },
      { name: 'Éditer', url: nil }
    ] %>
  </div>

  <div class="page-header-responsive">
    <div>
      <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Modifier le Contrat</h2>
      <p class="typo-body-small">Modifiez les informations du contrat N° <%= @contract.contract_number %></p>
    </div>
  </div>

  <%= render 'comprehensive_form', contract: @contract %>
</div>
