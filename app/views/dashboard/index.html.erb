<% content_for :header, "Tableau de Bord" %>
<%= stylesheet_link_tag "dashboard", "data-turbo-track": "reload" %>

<div class="section">
  <div style="margin-bottom: var(--space-xl);">
    <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Tableau de Bord</h2>
    <p class="typo-body-small">Vue d'ensemble du portefeuille immobilier</p>
  </div>

  <!-- KPI Cards -->
  <div class="dashboard-kpi-grid">
    <!-- Card 1: Sites Total -->
    <div class="dashboard-kpi-card">
      <div class="dashboard-kpi-header">
        <div class="dashboard-kpi-label">Sites Total</div>
        <div class="dashboard-kpi-icon blue">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
      </div>
      <div class="dashboard-kpi-main">
        <div class="dashboard-kpi-value">0</div>
      </div>
      <div class="dashboard-kpi-footer">
        <div class="dashboard-kpi-subtitle">Sites immobiliers</div>
      </div>
    </div>

    <!-- Card 2: Contrats Actifs -->
    <div class="dashboard-kpi-card">
      <div class="dashboard-kpi-header">
        <div class="dashboard-kpi-label">Contrats Actifs</div>
        <div class="dashboard-kpi-icon red">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
      </div>
      <div class="dashboard-kpi-main">
        <div class="dashboard-kpi-value">186</div>
      </div>
      <div class="dashboard-kpi-footer">
        <div class="dashboard-kpi-subtitle">92% de portfolio couvert</div>
      </div>
    </div>

    <!-- Card 3: Organisations -->
    <div class="dashboard-kpi-card complex">
      <div class="dashboard-kpi-header">
        <div class="dashboard-kpi-label">Prestataires at Autres Organisations</div>
        <div class="dashboard-kpi-icon orange">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
      </div>
      <div class="dashboard-kpi-main">
        <div>
          <div class="dashboard-kpi-value">
          <div style="font-size: 1.2rem; font-weight: 700; color: var(--dark-gray); margin-top: 2px;">0</div>
          </div>
        </div>
      </div>
      <div class="dashboard-kpi-footer">
        <div class="dashboard-kpi-details">
          <div>Fournisseurs et tiers</div>
          <div>Moy. contrats/prestataire: <strong>4.1</strong></div>
          <div>Top: <strong>ENGIE Solutions</strong> (75 contrats)</div>
        </div>
      </div>
    </div>

    <!-- Card 4: Budget Annuel Total -->
    <div class="dashboard-kpi-card">
      <div class="dashboard-kpi-header">
        <div class="dashboard-kpi-label">Budget Annuel Total</div>
        <div class="dashboard-kpi-icon purple">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
      <div class="dashboard-kpi-main">
        <div>
          <div class="dashboard-kpi-value">847 500</div>
          <div class="dashboard-kpi-euro">€</div>
        </div>
      </div>
      <div class="dashboard-kpi-footer">
        <div class="dashboard-kpi-subtitle positive">+6.2% vs année précédente</div>
      </div>
    </div>

    <!-- Card 5: Économies Potentielles -->
    <div class="dashboard-kpi-card">
      <div class="dashboard-kpi-header">
        <div class="dashboard-kpi-label">Économies Potentielles</div>
        <div class="dashboard-kpi-icon green">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
          </svg>
        </div>
      </div>
      <div class="dashboard-kpi-main">
        <div class="dashboard-kpi-value">127 350 €</div>
      </div>
      <div class="dashboard-kpi-footer">
        <div class="dashboard-kpi-subtitle positive">4.5% sur 58 contrats</div>
      </div>
    </div>

    <!-- Card 6: Alertes Actives -->
    <div class="dashboard-kpi-card">
      <div class="dashboard-kpi-header">
        <div class="dashboard-kpi-label">Alertes Actives</div>
        <div class="dashboard-kpi-icon light-blue">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
        </div>
      </div>
      <div class="dashboard-kpi-main">
        <div class="dashboard-kpi-value">23</div>
      </div>
      <div class="dashboard-kpi-footer">
        <div class="dashboard-kpi-subtitle">12 à venir, 8 à risque</div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div style="display: grid; grid-template-columns: 2fr 1fr; gap: var(--space-lg);">
    <!-- Recent Contracts -->
    <div style="background-color: var(--white); border-radius: var(--space-md); padding: var(--space-xl);">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--light-gray);">
        <h3 class="typo-h4" style="margin: 0;">Contrats Récents</h3>
        <%= link_to contracts_path, class: "typo-body-small", style: "color: var(--coral-primary); text-decoration: none; font-weight: 600;" do %>
          Voir tous →
        <% end %>
      </div>
      <div>
        <% [
          {number: "CTR-2025-001", title: "Maintenance ascenseurs Tour A", provider: "OTIS France", amount: "24,500 €", status: "Actif", date: "15 Jan 2025", status_color: "#d4edda", status_text: "#155724"},
          {number: "CTR-2025-002", title: "Nettoyage bureaux - Site Paris", provider: "Clean Pro Services", amount: "12,800 €", status: "Actif", date: "10 Jan 2025", status_color: "#d4edda", status_text: "#155724"},
          {number: "CTR-2024-189", title: "Contrôle électrique réglementaire", provider: "Bureau Veritas", amount: "8,500 €", status: "Terminé", date: "05 Jan 2025", status_color: "#e2e8f0", status_text: "#4a5568"},
          {number: "CTR-2025-003", title: "CVC - Maintenance préventive", provider: "Daikin Service", amount: "31,200 €", status: "Actif", date: "02 Jan 2025", status_color: "#d4edda", status_text: "#155724"},
          {number: "CTR-2024-188", title: "Entretien espaces verts", provider: "Vert Nature", amount: "6,400 €", status: "Actif", date: "28 Dec 2024", status_color: "#d4edda", status_text: "#155724"}
        ].each do |contract| %>
          <div style="padding: var(--space-md); background-color: #f8f9fa; border-radius: var(--space-sm); margin-bottom: var(--space-md);">
            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: var(--space-sm);">
              <div style="flex: 1;">
                <div style="display: flex; align-items: center; gap: var(--space-sm); margin-bottom: var(--space-xs);">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="#667eea">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  <span class="typo-body-small typo-bold" style="color: var(--coral-primary);"><%= contract[:number] %></span>
                </div>
                <p class="typo-body-small typo-bold" style="margin-bottom: var(--space-xs);"><%= contract[:title] %></p>
                <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.8rem;"><%= contract[:provider] %></p>
              </div>
              <div style="text-align: right;">
                <p class="typo-body-small typo-bold" style="color: var(--dark-gray); margin-bottom: var(--space-xs);"><%= contract[:amount] %></p>
                <span style="display: inline-block; padding: 4px 10px; border-radius: 4px; font-size: 0.7rem; font-weight: 600; background-color: <%= contract[:status_color] %>; color: <%= contract[:status_text] %>;">
                  <%= contract[:status] %>
                </span>
              </div>
            </div>
            <div style="display: flex; align-items: center; gap: var(--space-xs);">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="#999">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; margin: 0;"><%= contract[:date] %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div style="display: flex; flex-direction: column; gap: var(--space-lg);">
      <!-- Administration -->
      <div style="background-color: var(--white); border-radius: var(--space-md); padding: var(--space-xl);">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--light-gray);">
          <h3 class="typo-h4" style="margin: 0;">Administration</h3>
        </div>
        <div style="display: flex; flex-direction: column; gap: var(--space-sm);">
          <%= link_to admin_portfolio_managers_path, style: "text-decoration: none; display: flex; align-items: center; gap: var(--space-sm); padding: var(--space-md); background-color: #f8f9fa; border-radius: var(--space-sm); transition: background-color 0.2s;" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="#667eea" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <span class="typo-body-small typo-bold" style="color: var(--dark-gray);">Portfolio Managers</span>
          <% end %>
          <%= link_to admin_clients_path, style: "text-decoration: none; display: flex; align-items: center; gap: var(--space-sm); padding: var(--space-md); background-color: #f8f9fa; border-radius: var(--space-sm); transition: background-color 0.2s;" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="#10b981" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <span class="typo-body-small typo-bold" style="color: var(--dark-gray);">Client Data Access</span>
          <% end %>
          <%= link_to admin_price_references_path, style: "text-decoration: none; display: flex; align-items: center; gap: var(--space-sm); padding: var(--space-md); background-color: #f8f9fa; border-radius: var(--space-sm); transition: background-color 0.2s;" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="#f59e0b" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
            <span class="typo-body-small typo-bold" style="color: var(--dark-gray);">Price References</span>
          <% end %>
        </div>
      </div>

      <!-- Alerts -->
      <div style="background-color: var(--white); border-radius: var(--space-md); padding: var(--space-xl);">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--light-gray);">
          <h3 class="typo-h4" style="margin: 0;">Alertes Actives</h3>
          <%= link_to alerts_path, class: "typo-body-small", style: "color: var(--coral-primary); text-decoration: none; font-weight: 600;" do %>
            Voir →
          <% end %>
        </div>
        <% [
          {type: "Échéance", title: "Contrat CTR-2024-156", date: "Dans 15 jours", color: "#ffc107"},
          {type: "Risque", title: "Résiliation non effectuée", date: "Dépassé", color: "#dc3545"},
          {type: "À venir", title: "Contrôle réglementaire", date: "Dans 30 jours", color: "#17a2b8"}
        ].each do |alert| %>
          <div style="padding: var(--space-md); background-color: #f8f9fa; border-left: 4px solid <%= alert[:color] %>; border-radius: var(--space-xs); margin-bottom: var(--space-md);">
            <div style="display: flex; align-items: center; gap: var(--space-sm); margin-bottom: var(--space-xs);">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="<%= alert[:color] %>">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
              <span class="typo-body-small typo-bold" style="color: <%= alert[:color] %>;"><%= alert[:type] %></span>
            </div>
            <p class="typo-body-small typo-bold" style="color: var(--dark-gray); margin-bottom: var(--space-xs); font-size: 0.85rem;"><%= alert[:title] %></p>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; margin: 0;"><%= alert[:date] %></p>
          </div>
        <% end %>
      </div>

      <!-- Quick Actions -->
      <div style="background-color: var(--white); border-radius: var(--space-md); padding: var(--space-xl);">
        <h3 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--light-gray);">
          Actions Rapides
        </h3>
        <div style="display: flex; flex-direction: column; gap: var(--space-sm);">
          <%= link_to new_contract_path, class: "typo-btn-primary", style: "text-align: center; display: inline-flex; align-items: center; justify-content: center; gap: var(--space-sm);" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nouveau Contrat
          <% end %>
          <%= link_to new_site_path, class: "typo-btn-secondary", style: "text-align: center; display: inline-flex; align-items: center; justify-content: center; gap: var(--space-sm);" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            Nouveau Site
          <% end %>
          <%= link_to new_equipment_path, class: "typo-btn-secondary", style: "text-align: center; display: inline-flex; align-items: center; justify-content: center; gap: var(--space-sm);" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Ajouter Équipement
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Responsive CSS for mobile -->
<style>
  @media (max-width: 1024px) {
    div[style*="grid-template-columns: 2fr 1fr"] {
      grid-template-columns: 1fr !important;
    }
  }
</style>
