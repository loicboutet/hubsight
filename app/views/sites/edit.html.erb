<% content_for :header, "Modifier le Site" %>

<div class="section">
  <div class="page-header-responsive" style="margin-bottom: var(--space-lg);">
    <div>
      <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Modifier le site : <%= @site.name %></h2>
      <p class="typo-body-small">Mettre à jour les informations du site</p>
    </div>
    <div style="display: flex; gap: var(--space-sm);">
      <%= link_to site_path(@site), class: "typo-btn-cancel" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
        Annuler
      <% end %>
      <%= link_to sites_path, class: "typo-btn-cancel" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Retour à la liste
      <% end %>
    </div>
  </div>

  <%= render 'form', site: @site %>
</div>
