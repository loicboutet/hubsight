<% content_for :header, @site.name %>

<div class="section">
  <!-- Breadcrumb Navigation -->
  <% site_icon = capture { render 'shared/hierarchy_icons', type: 'site', size: 16 } %>
  <%= render 'shared/breadcrumb', path: [
    { name: 'Sites', url: sites_path, icon: site_icon },
    { name: @site.name, url: nil, icon: site_icon }
  ] %>

  <!-- Header Section -->
  <div style="margin-bottom: var(--space-xl); display: flex; justify-content: space-between; align-items: center;">
    <div style="display: flex; align-items: center; gap: var(--space-md);">
      <%= render 'shared/hierarchy_icons', type: 'site', size: 32, color: '#3b82f6' %>
      <div>
        <h2 class="typo-h2" style="margin-bottom: var(--space-xs);"><%= @site.name %></h2>
        <p class="typo-body-small" style="color: var(--medium-gray);"><%= @site.address %>, <%= @site.city %> <%= @site.postal_code %></p>
      </div>
    </div>
    <div style="display: flex; gap: var(--space-md);">
      <%= link_to edit_site_path(@site.id), class: "typo-btn-small typo-btn-small-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Éditer
      <% end %>
      <%= link_to sites_path, class: "typo-btn-cancel" do %>
        ← Retour à la liste
      <% end %>
    </div>
  </div>

  <div style="background-color: var(--white); border-radius: var(--space-md); ">
    <!-- Site Header Card -->
    <div style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); padding: var(--space-xl); border-radius: var(--space-md); color: white; margin-bottom: var(--space-xl);">
      <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: var(--space-lg);">
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Code Site</p>
          <p class="typo-h4" style="color: white;"><%= @site.code %></p>
        </div>
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Type</p>
          <p class="typo-h4" style="color: white;"><%= @site.site_type.capitalize %></p>
        </div>
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Surface Totale</p>
          <p class="typo-h4" style="color: white;"><%= number_with_delimiter(@site.total_area, delimiter: ' ') %> m²</p>
        </div>
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Statut</p>
          <p class="typo-h4" style="color: white;"><%= @site.status.capitalize %></p>
        </div>
      </div>
    </div>

    <!-- Summary Statistics with Icons -->
    <div style="margin-bottom: var(--space-xl);">
      <h4 class="typo-h4" style="margin-bottom: var(--space-lg);">Vue d'Ensemble</h4>
      <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: var(--space-lg);">
        <div style="text-align: center; padding: var(--space-xl); background: linear-gradient(135deg, #10b981 0%, #059669 100%); border-radius: var(--space-md); color: white; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
          <div style="display: flex; justify-content: center; margin-bottom: var(--space-md);">
            <%= render 'shared/hierarchy_icons', type: 'building', size: 32, color: 'white' %>
          </div>
          <p class="typo-h2" style="color: white; margin-bottom: var(--space-xs);">2</p>
          <p class="typo-body-small" style="color: rgba(255,255,255,0.9); text-transform: uppercase; font-size: 0.75rem; font-weight: 600;">Bâtiments</p>
        </div>
        
        <div style="text-align: center; padding: var(--space-xl); background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); border-radius: var(--space-md); color: white; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
          <div style="display: flex; justify-content: center; margin-bottom: var(--space-md);">
            <%= render 'shared/hierarchy_icons', type: 'level', size: 32, color: 'white' %>
          </div>
          <p class="typo-h2" style="color: white; margin-bottom: var(--space-xs);">12</p>
          <p class="typo-body-small" style="color: rgba(255,255,255,0.9); text-transform: uppercase; font-size: 0.75rem; font-weight: 600;">Niveaux</p>
        </div>

        <div style="text-align: center; padding: var(--space-xl); background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); border-radius: var(--space-md); color: white; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
          <div style="display: flex; justify-content: center; margin-bottom: var(--space-md);">
            <%= render 'shared/hierarchy_icons', type: 'space', size: 32, color: 'white' %>
          </div>
          <p class="typo-h2" style="color: white; margin-bottom: var(--space-xs);">156</p>
          <p class="typo-body-small" style="color: rgba(255,255,255,0.9); text-transform: uppercase; font-size: 0.75rem; font-weight: 600;">Espaces</p>
        </div>

        <div style="text-align: center; padding: var(--space-xl); background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%); border-radius: var(--space-md); color: white; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
          <div style="display: flex; justify-content: center; margin-bottom: var(--space-md);">
            <%= render 'shared/hierarchy_icons', type: 'equipment', size: 32, color: 'white' %>
          </div>
          <p class="typo-h2" style="color: white; margin-bottom: var(--space-xs);">324</p>
          <p class="typo-body-small" style="color: rgba(255,255,255,0.9); text-transform: uppercase; font-size: 0.75rem; font-weight: 600;">Équipements</p>
        </div>
      </div>
    </div>

    <!-- Buildings Section -->
    <div style="margin-bottom: var(--space-xl);">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-lg);">
        <div style="display: flex; align-items: center; gap: var(--space-sm);">
          <%= render 'shared/hierarchy_icons', type: 'building', size: 24, color: '#10b981' %>
          <h4 class="typo-h4">Bâtiments de ce Site</h4>
        </div>
        <%= link_to '#', class: "typo-btn-success", style: "display: inline-flex; align-items: center; gap: var(--space-sm);" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nouveau Bâtiment
        <% end %>
      </div>

      <div style="display: grid; gap: var(--space-md);">
        <%
          # Mock buildings data - replace with actual data when available
          buildings = [
            { id: 'building-a', name: 'Bâtiment A - Principal', area: 12500, levels: 8, spaces: 98, equipment: 187, year: 2005 },
            { id: 'building-b', name: 'Bâtiment B - Annexe', area: 8200, levels: 4, spaces: 58, equipment: 137, year: 2010 }
          ]
        %>

        <% buildings.each do |building| %>
          <div style="padding: var(--space-lg); background-color: #f8f9fa; border-radius: var(--space-md); border-left: 4px solid #10b981;">
            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: var(--space-md);">
              <div style="flex: 1;">
                <div style="display: flex; align-items: center; gap: var(--space-sm); margin-bottom: var(--space-xs);">
                  <%= render 'shared/hierarchy_icons', type: 'building', size: 20, color: '#10b981' %>
                  <h5 class="typo-h5" style="color: var(--dark-gray);"><%= building[:name] %></h5>
                </div>
                <p class="typo-body-small" style="color: var(--medium-gray); margin-bottom: var(--space-md);">
                  <%= number_with_delimiter(building[:area], delimiter: ' ') %> m² • Construit en <%= building[:year] %>
                </p>
                
                <div style="display: flex; gap: var(--space-lg); margin-bottom: var(--space-md);">
                  <div style="display: flex; align-items: center; gap: var(--space-xs);">
                    <%= render 'shared/hierarchy_icons', type: 'level', size: 16, color: '#f59e0b' %>
                    <span class="typo-body-small typo-bold"><%= building[:levels] %></span>
                    <span class="typo-body-small" style="color: var(--medium-gray);">Niveaux</span>
                  </div>
                  <div style="display: flex; align-items: center; gap: var(--space-xs);">
                    <%= render 'shared/hierarchy_icons', type: 'space', size: 16, color: '#8b5cf6' %>
                    <span class="typo-body-small typo-bold"><%= building[:spaces] %></span>
                    <span class="typo-body-small" style="color: var(--medium-gray);">Espaces</span>
                  </div>
                  <div style="display: flex; align-items: center; gap: var(--space-xs);">
                    <%= render 'shared/hierarchy_icons', type: 'equipment', size: 16, color: '#6b7280' %>
                    <span class="typo-body-small typo-bold"><%= building[:equipment] %></span>
                    <span class="typo-body-small" style="color: var(--medium-gray);">Équipements</span>
                  </div>
                </div>
              </div>
              
              <div style="display: flex; gap: var(--space-xs);">
                <%= link_to '#', class: "typo-btn-small typo-btn-small-secondary" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  Voir
                <% end %>
                <%= link_to '#', class: "typo-btn-small typo-btn-small-primary" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Éditer
                <% end %>
              </div>
            </div>
            
            <div style="padding-top: var(--space-md); border-top: 1px solid #e5e7eb;">
              <%= link_to '#', class: "typo-btn-small typo-btn-small-primary", style: "display: inline-flex; align-items: center; gap: var(--space-xs);" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Ajouter un Niveau
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Information Details -->
    <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--space-xl); margin-bottom: var(--space-xl);">
      <!-- Address Section -->
      <div>
        <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
          Adresse
        </h4>
        <div style="display: grid; gap: var(--space-md);">
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Adresse</p>
            <p class="typo-body-small typo-bold"><%= @site.address %></p>
          </div>
          <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--space-md);">
            <div>
              <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Ville</p>
              <p class="typo-body-small typo-bold"><%= @site.city %></p>
            </div>
            <div>
              <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Code Postal</p>
              <p class="typo-body-small typo-bold"><%= @site.postal_code %></p>
            </div>
          </div>
          <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--space-md);">
            <div>
              <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Région</p>
              <p class="typo-body-small typo-bold"><%= @site.region.capitalize %></p>
            </div>
            <div>
              <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Pays</p>
              <p class="typo-body-small typo-bold"><%= @site.country %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Section -->
      <div>
        <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
          Gestion et Contact
        </h4>
        <div style="display: grid; gap: var(--space-md);">
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Responsable de Site</p>
            <p class="typo-body-small typo-bold"><%= @site.site_manager %></p>
          </div>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Email</p>
            <p class="typo-body-small typo-bold"><%= @site.contact_email %></p>
          </div>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Téléphone</p>
            <p class="typo-body-small typo-bold"><%= @site.contact_phone %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Description Section -->
    <% if @site.description.present? %>
      <div>
        <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
          Description
        </h4>
        <p class="typo-body-small"><%= @site.description %></p>
      </div>
    <% end %>
  </div>
</div>
