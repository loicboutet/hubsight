<% content_for :title, "Admin Dashboard - HubSight" %>
<% content_for :header, "Admin Dashboard" %>

<div style="display: flex; flex-direction: column; gap: var(--space-xl);">
  <!-- Stats Overview -->
  <div class="admin-stats-grid">
    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <p class="admin-stat-label">Total Users</p>
          <h2 class="admin-stat-value">8,249</h2>
          <p class="admin-stat-change positive">
            <span style="font-weight: 600;">↑ 12%</span> from last month
          </p>
        </div>
        <div class="admin-stat-icon blue">
          <svg xmlns="http://www.w3.org/2000/svg" style="width: 24px; height: 24px;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
      </div>
    </div>
    
    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <p class="admin-stat-label">New Sign-ups</p>
          <h2 class="admin-stat-value">385</h2>
          <p class="admin-stat-change positive">
            <span style="font-weight: 600;">↑ 8%</span> from last week
          </p>
        </div>
        <div class="admin-stat-icon green">
          <svg xmlns="http://www.w3.org/2000/svg" style="width: 24px; height: 24px;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
          </svg>
        </div>
      </div>
    </div>
    
    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <p class="admin-stat-label">Active Sessions</p>
          <h2 class="admin-stat-value">1,247</h2>
          <p class="admin-stat-change negative">
            <span style="font-weight: 600;">↓ 3%</span> from yesterday
          </p>
        </div>
        <div class="admin-stat-icon purple">
          <svg xmlns="http://www.w3.org/2000/svg" style="width: 24px; height: 24px;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
      </div>
    </div>
    
    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <p class="admin-stat-label">System Uptime</p>
          <h2 class="admin-stat-value">99.9%</h2>
          <p class="admin-stat-change" style="color: var(--medium-gray);">
            Last restart: 32 days ago
          </p>
        </div>
        <div class="admin-stat-icon coral">
          <svg xmlns="http://www.w3.org/2000/svg" style="width: 24px; height: 24px;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Charts Section -->
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); gap: var(--space-xl);">
    <div class="section">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-lg);">
        <h3 class="typo-h4" style="margin: 0;">User Registrations</h3>
        <select class="typo-body-small" style="border: 1px solid var(--light-gray); border-radius: var(--space-xs); padding: var(--space-sm) var(--space-md);">
          <option>Last 7 days</option>
          <option>Last 30 days</option>
          <option>Last 90 days</option>
        </select>
      </div>
      
      <!-- Chart placeholder -->
      <div style="height: 250px; background-color: var(--pink-light); border-radius: var(--space-sm); display: flex; align-items: center; justify-content: center;">
        <div style="text-align: center; color: var(--medium-gray);">
          <p class="typo-body">Chart visualization would be here</p>
          <p class="typo-body-small">(User registration growth over time)</p>
        </div>
      </div>
    </div>
    
    <div class="section">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-lg);">
        <h3 class="typo-h4" style="margin: 0;">Traffic Sources</h3>
        <select class="typo-body-small" style="border: 1px solid var(--light-gray); border-radius: var(--space-xs); padding: var(--space-sm) var(--space-md);">
          <option>Last 7 days</option>
          <option>Last 30 days</option>
          <option>Last 90 days</option>
        </select>
      </div>
      
      <!-- Chart placeholder -->
      <div style="height: 250px; background-color: var(--pink-light); border-radius: var(--space-sm); display: flex; align-items: center; justify-content: center;">
        <div style="text-align: center; color: var(--medium-gray);">
          <p class="typo-body">Chart visualization would be here</p>
          <p class="typo-body-small">(Traffic source distribution)</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Recent Activity -->
  <div class="section">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-lg);">
      <h3 class="typo-h4" style="margin: 0;">Recent System Events</h3>
      <button class="typo-btn-small typo-btn-small-secondary">View All</button>
    </div>
    
    <div style="overflow-x: auto;">
      <table class="typo-table">
        <thead>
          <tr>
            <th>Event</th>
            <th>User</th>
            <th>IP Address</th>
            <th>Date/Time</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>System Backup</td>
            <td>system</td>
            <td>192.168.1.1</td>
            <td>Today, 04:30 AM</td>
            <td>
              <span class="typo-label-success">Success</span>
            </td>
          </tr>
          <tr>
            <td>User Login</td>
            <td>admin@example.com</td>
            <td>172.16.0.12</td>
            <td>Today, 09:15 AM</td>
            <td>
              <span class="typo-label-success">Success</span>
            </td>
          </tr>
          <tr>
            <td>Failed Login Attempt</td>
            <td>unknown</td>
            <td>45.32.118.92</td>
            <td>Today, 10:23 AM</td>
            <td>
              <span class="typo-label-danger">Failed</span>
            </td>
          </tr>
          <tr>
            <td>Configuration Change</td>
            <td>admin@example.com</td>
            <td>172.16.0.12</td>
            <td>Today, 11:05 AM</td>
            <td>
              <span class="typo-label-warning">Warning</span>
            </td>
          </tr>
          <tr>
            <td>Database Optimization</td>
            <td>system</td>
            <td>192.168.1.1</td>
            <td>Today, 02:00 PM</td>
            <td>
              <span class="typo-label-success">Success</span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="section">
    <h3 class="typo-h4" style="margin-bottom: var(--space-lg);">Quick Actions</h3>
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(140px, 1fr)); gap: var(--space-md);">
      <button style="display: flex; flex-direction: column; align-items: center; justify-content: center; padding: var(--space-lg); background-color: var(--pink-light); border: 1px solid var(--pink-pale); border-radius: var(--space-sm); cursor: pointer; transition: all 0.3s ease;">
        <svg xmlns="http://www.w3.org/2000/svg" style="width: 32px; height: 32px; color: var(--coral-primary); margin-bottom: var(--space-sm);" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        <span class="typo-body-small" style="font-weight: 500;">Add User</span>
      </button>
      
      <button style="display: flex; flex-direction: column; align-items: center; justify-content: center; padding: var(--space-lg); background-color: var(--pink-light); border: 1px solid var(--pink-pale); border-radius: var(--space-sm); cursor: pointer; transition: all 0.3s ease;">
        <svg xmlns="http://www.w3.org/2000/svg" style="width: 32px; height: 32px; color: var(--coral-primary); margin-bottom: var(--space-sm);" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        <span class="typo-body-small" style="font-weight: 500;">Edit Config</span>
      </button>
      
      <button style="display: flex; flex-direction: column; align-items: center; justify-content: center; padding: var(--space-lg); background-color: var(--pink-light); border: 1px solid var(--pink-pale); border-radius: var(--space-sm); cursor: pointer; transition: all 0.3s ease;">
        <svg xmlns="http://www.w3.org/2000/svg" style="width: 32px; height: 32px; color: var(--coral-primary); margin-bottom: var(--space-sm);" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        <span class="typo-body-small" style="font-weight: 500;">Run Backup</span>
      </button>
      
      <button style="display: flex; flex-direction: column; align-items: center; justify-content: center; padding: var(--space-lg); background-color: var(--pink-light); border: 1px solid var(--pink-pale); border-radius: var(--space-sm); cursor: pointer; transition: all 0.3s ease;">
        <svg xmlns="http://www.w3.org/2000/svg" style="width: 32px; height: 32px; color: var(--coral-primary); margin-bottom: var(--space-sm);" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <span class="typo-body-small" style="font-weight: 500;">View Logs</span>
      </button>
    </div>
  </div>
</div>

<style>
  /* Quick Actions hover effect */
  button[style*="background-color: var(--pink-light)"]:hover {
    background-color: var(--coral-lighter) !important;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(255, 107, 107, 0.2);
  }
</style>
