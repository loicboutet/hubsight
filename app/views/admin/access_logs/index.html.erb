<div class="px-4 sm:px-6 lg:px-8 py-10">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900">Logs d'Accès Admin</h1>
      <p class="mt-2 text-sm text-gray-700">
        Journal d'audit de tous les accès aux données clients par les administrateurs.
      </p>
    </div>
  </div>

  <!-- Filters -->
  <div class="mt-6 bg-white shadow sm:rounded-lg p-4">
    <%= form_with url: admin_access_logs_path, method: :get, class: "grid grid-cols-1 gap-4 sm:grid-cols-4" do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-700">Administrateur</label>
        <%= select_tag :admin_id, 
            options_from_collection_for_select(@admin_users, :id, :email, params[:admin_id]),
            include_blank: "Tous",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Organisation</label>
        <%= select_tag :organization_id,
            options_from_collection_for_select(@organizations, :id, :name, params[:organization_id]),
            include_blank: "Toutes",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Type d'action</label>
        <%= select_tag :action_type,
            options_for_select([
              ['Impersonation', 'impersonate'],
              ['Arrêt impersonation', 'stop_impersonation']
            ], params[:action_type]),
            include_blank: "Tous",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Statut</label>
        <%= select_tag :status,
            options_for_select([
              ['Active', 'active'],
              ['Terminée', 'completed']
            ], params[:status]),
            include_blank: "Tous",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div class="sm:col-span-4 flex justify-end gap-2">
        <%= link_to "Réinitialiser", admin_access_logs_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= f.submit "Filtrer", class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>

  <!-- Logs Table -->
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">
                Date/Heure
              </th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                Administrateur
              </th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                Organisation
              </th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                Action
              </th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                Durée
              </th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                IP
              </th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                Statut
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% if @access_logs.empty? %>
              <tr>
                <td colspan="7" class="px-3 py-10 text-center text-sm text-gray-500">
                  Aucun log d'accès trouvé.
                </td>
              </tr>
            <% else %>
              <% @access_logs.each do |log| %>
                <tr class="hover:bg-gray-50">
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-0">
                    <div class="font-medium text-gray-900">
                      <%= l(log.started_at, format: :short) %>
                    </div>
                    <div class="text-gray-500 text-xs">
                      <%= log.started_at.strftime('%H:%M:%S') %>
                    </div>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                    <%= log.admin_user.email %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                    <%= log.organization.name %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm">
                    <% case log.action_type %>
                    <% when 'impersonate' %>
                      <span class="inline-flex items-center rounded-full bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/20">
                        Accès données
                      </span>
                    <% when 'stop_impersonation' %>
                      <span class="inline-flex items-center rounded-full bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
                        Fin d'accès
                      </span>
                    <% else %>
                      <span class="inline-flex items-center rounded-full bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-600/20">
                        <%= log.action_type %>
                      </span>
                    <% end %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= log.duration_in_words %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= log.ip_address %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm">
                    <% if log.active? %>
                      <span class="inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
                        Active
                      </span>
                    <% else %>
                      <span class="inline-flex items-center rounded-full bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
                        Terminée
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Pagination -->
  <% if @access_logs.total_pages > 1 %>
    <div class="mt-6 flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6">
      <div class="flex flex-1 justify-between sm:hidden">
        <% if @access_logs.prev_page %>
          <%= link_to "Précédent", admin_access_logs_path(page: @access_logs.prev_page), class: "relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <% end %>
        <% if @access_logs.next_page %>
          <%= link_to "Suivant", admin_access_logs_path(page: @access_logs.next_page), class: "relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <% end %>
      </div>
      <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
        <div>
          <p class="text-sm text-gray-700">
            Affichage de
            <span class="font-medium"><%= @access_logs.offset_value + 1 %></span>
            à
            <span class="font-medium"><%= [@access_logs.offset_value + @access_logs.limit_value, @access_logs.total_count].min %></span>
            sur
            <span class="font-medium"><%= @access_logs.total_count %></span>
            résultats
          </p>
        </div>
        <div>
          <%= paginate @access_logs, theme: 'twitter-bootstrap-4' %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Security Notice -->
  <div class="mt-8 rounded-md bg-blue-50 p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800">Information</h3>
        <div class="mt-2 text-sm text-blue-700">
          <p>
            Ces logs enregistrent tous les accès aux données clients par les administrateurs.
            Chaque session d'accès inclut l'horodatage, l'adresse IP, et la durée d'accès.
            Les sessions actives expirent automatiquement après 2 heures d'inactivité.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
