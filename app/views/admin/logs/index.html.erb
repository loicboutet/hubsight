<% content_for :title, "Application Logs - Administration" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Application Logs</h1>
      <p class="text-gray-600 mt-1">
        Viewing last 1000 lines from
        <span class="font-mono text-sm px-2 py-1 rounded">
          <%= @environment %>.log
        </span>
      </p>
    </div>
    <div>
      <%= link_to admin_logs_path, class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition flex items-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        Refresh Logs
      <% end %>
    </div>
  </div>

  <!-- Log File Info -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
    <div class="flex items-center justify-between text-sm">
      <div class="flex items-center gap-4">
        <span class="text-gray-600">
          <strong>Environment:</strong> 
          <span class="px-2 py-1 rounded-full text-xs font-semibold <%= @environment == 'production' ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800' %>">
            <%= @environment.upcase %>
          </span>
        </span>
        <span class="text-gray-600">
          <strong>Log File:</strong> 
          <code class="text-xs bg-gray-100 px-2 py-1 rounded"><%= @log_file_path %></code>
        </span>
      </div>
      <span class="text-gray-500">
        <%= @log_lines.size %> lines displayed
      </span>
    </div>
  </div>

  <!-- Log Display -->
  <% if @log_lines.any? %>
    <div class="bg-black rounded-xl shadow-lg border border-gray-800 overflow-hidden">
      <div class="bg-gray-900 px-4 py-2 border-b border-gray-800">
        <h3 class="text-sm font-semibold text-gray-300">Log Output</h3>
      </div>
      <div class="p-4 overflow-auto max-h-[600px] bg-black">
        <pre class="text-xs font-mono leading-relaxed"><% @log_lines.each do |line| %><%= format_log_line(line) %>
<% end %></pre>
      </div>
    </div>

    <!-- Info Note -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
      <h3 class="text-sm font-semibold text-gray-700 mb-2">Display Info</h3>
      <p class="text-xs text-gray-600">Log entries are displayed in white text on black background for optimal readability.</p>
    </div>
  <% else %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No log entries found</h3>
      <p class="mt-1 text-sm text-gray-500">
        The log file is empty or could not be read.
      </p>
    </div>
  <% end %>
</div>
