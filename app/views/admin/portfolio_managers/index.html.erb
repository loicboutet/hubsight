                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Edit
              <% end %>
              <%= link_to admin_portfolio_manager_path(1), method: :delete, data: { confirm: 'Are you sure?' }, class: "typo-btn-small typo-btn-small-danger" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Delete
              <% end %>
            </div>
          </td>
        </tr>
        <tr>
          <td class="typo-bold">Marie Martin</td>
          <td>marie.martin@franceimmobilier.fr</td>
          <td>France Immobilier</td>
          <td><span class="typo-label-info">3 portfolios</span></td>
          <td><span class="typo-label-success">Active</span></td>
          <td>Dec 20, 2024</td>
          <td style="text-align: right;">
            <div style="display: inline-flex; gap: var(--space-sm); flex-wrap: wrap; justify-content: flex-end;">
              <%= link_to admin_portfolio_manager_path(2), class: "typo-btn-small typo-btn-small-secondary" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
