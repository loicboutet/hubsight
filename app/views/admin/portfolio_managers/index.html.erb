<% content_for :header, "Portfolio Managers" %>

<div class="section">
  <div style="display: flex; flex-wrap: wrap; justify-content: space-between; align-items: center; gap: var(--space-md); margin-bottom: var(--space-xl);">
    <div style="flex: 1; min-width: 250px;">
      <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Portfolio Managers</h2>
      <p class="typo-body-small">Manage portfolio manager accounts and permissions</p>
    </div>
    <%= link_to new_admin_portfolio_manager_path, class: "typo-btn-success" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      New Portfolio Manager
    <% end %>
  </div>

  <!-- Stats Cards -->
  <div class="admin-stats-grid">
    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <div class="admin-stat-label">Total Managers</div>
          <div class="admin-stat-value">0</div>
          <div class="admin-stat-change positive">+0% from last month</div>
        </div>
        <div class="admin-stat-icon blue">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <div class="admin-stat-label">Active This Month</div>
          <div class="admin-stat-value">0</div>
          <div class="admin-stat-change positive">+0% activity</div>
        </div>
        <div class="admin-stat-icon green">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <div class="admin-stat-label">Total Portfolios</div>
          <div class="admin-stat-value">0</div>
          <div class="admin-stat-change">Managed portfolios</div>
        </div>
        <div class="admin-stat-icon purple">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Search and Filters -->
  <div style="margin-bottom: var(--space-lg); padding: var(--space-lg); background-color: var(--pink-light); border-radius: var(--space-sm);">
    <form style="display: grid; grid-template-columns: 1fr 1fr auto; gap: var(--space-md); align-items: end;">
      <div>
        <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-xs);">Search</label>
        <input type="text" placeholder="Search by name or email..." style="width: 100%; padding: 12px; border: 1px solid var(--light-gray); border-radius: var(--space-sm); font-size: 1rem;">
      </div>
      <div>
        <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-xs);">Status</label>
        <select style="width: 100%; padding: 12px; border: 1px solid var(--light-gray); border-radius: var(--space-sm); font-size: 1rem;">
          <option>All Status</option>
          <option>Active</option>
          <option>Inactive</option>
        </select>
      </div>
      <button type="submit" class="typo-btn-success">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        Search
      </button>
    </form>
  </div>

  <!-- Portfolio Managers Table -->
  <div style="overflow-x: auto;">
    <table class="typo-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Organization</th>
          <th>Portfolios</th>
          <th>Status</th>
          <th>Created</th>
          <th style="text-align: right;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="typo-bold">Jean Dupont</td>
          <td>jean.dupont@abcproperties.fr</td>
          <td>ABC Properties</td>
          <td><span class="typo-label-info">5 portfolios</span></td>
          <td><span class="typo-label-success">Active</span></td>
          <td>Jan 15, 2025</td>
          <td style="text-align: right;">
            <div style="display: inline-flex; gap: var(--space-sm); flex-wrap: wrap; justify-content: flex-end;">
              <%= link_to admin_portfolio_manager_path(1), class: "typo-btn-small typo-btn-small-secondary" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                View
              <% end %>
              <%= link_to edit_admin_portfolio_manager_path(1), class: "typo-btn-small typo-btn-small-primary" do %>
