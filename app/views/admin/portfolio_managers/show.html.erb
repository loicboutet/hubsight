<% content_for :header, "Portfolio Manager Details" %>

<div class="section">
  <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: var(--space-xl);">
    <div>
      <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Portfolio Manager Profile</h2>
      <p class="typo-body-small">View and manage portfolio manager account details</p>
    </div>
    <div style="display: flex; gap: var(--space-md);">
      <%= link_to edit_admin_portfolio_manager_path, class: "typo-btn-success" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit
      <% end %>
      <%= link_to admin_portfolio_managers_path, class: "typo-btn-cancel" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to List
      <% end %>
    </div>
  </div>

  <!-- Account Information -->
  <div style="background-color: var(--pink-light); padding: var(--space-xl); border-radius: var(--space-md); margin-bottom: var(--space-xl);">
    <h3 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">Account Information</h3>
    <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--space-lg);">
      <div>
        <label class="typo-body-small typo-bold" style="display: block; color: var(--medium-gray); margin-bottom: var(--space-xs);">Full Name</label>
        <p class="typo-body">John Doe</p>
      </div>
      <div>
        <label class="typo-body-small typo-bold" style="display: block; color: var(--medium-gray); margin-bottom: var(--space-xs);">Email Address</label>
        <p class="typo-body">john.doe@example.com</p>
      </div>
      <div>
        <label class="typo-body-small typo-bold" style="display: block; color: var(--medium-gray); margin-bottom: var(--space-xs);">Organization</label>
        <p class="typo-body">ABC Properties Ltd.</p>
      </div>
      <div>
        <label class="typo-body-small typo-bold" style="display: block; color: var(--medium-gray); margin-bottom: var(--space-xs);">Phone Number</label>
        <p class="typo-body">+33 6 12 34 56 78</p>
      </div>
      <div>
        <label class="typo-body-small typo-bold" style="display: block; color: var(--medium-gray); margin-bottom: var(--space-xs);">Account Status</label>
        <p class="typo-body"><span class="typo-label-success">Active</span></p>
      </div>
      <div>
        <label class="typo-body-small typo-bold" style="display: block; color: var(--medium-gray); margin-bottom: var(--space-xs);">Member Since</label>
        <p class="typo-body">January 15, 2025</p>
      </div>
    </div>
  </div>

  <!-- Portfolio Stats -->
  <div class="admin-stats-grid" style="margin-bottom: var(--space-xl);">
    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <div class="admin-stat-label">Managed Portfolios</div>
          <div class="admin-stat-value">3</div>
          <div class="admin-stat-change">Active portfolios</div>
        </div>
        <div class="admin-stat-icon blue">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
      </div>
    </div>

    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <div class="admin-stat-label">Site Managers</div>
          <div class="admin-stat-value">12</div>
          <div class="admin-stat-change">Under supervision</div>
        </div>
        <div class="admin-stat-icon green">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <div class="admin-stat-label">Total Contracts</div>
          <div class="admin-stat-value">45</div>
          <div class="admin-stat-change positive">+12% this month</div>
        </div>
        <div class="admin-stat-icon purple">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Activity Log -->
  <div>
    <h3 class="typo-h4" style="margin-bottom: var(--space-lg);">Recent Activity</h3>
    <div style="background-color: var(--white); border: 1px solid var(--pink-pale); border-radius: var(--space-md); padding: var(--space-lg);">
      <div style="display: flex; gap: var(--space-lg); padding: var(--space-md); border-bottom: 1px solid var(--pink-pale);">
        <div style="color: var(--coral-primary);">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div style="flex: 1;">
          <p class="typo-body typo-bold" style="margin-bottom: var(--space-xs);">Added new contract</p>
          <p class="typo-body-small" style="color: var(--medium-gray);">Contract #C-2025-001 for Building A maintenance - 2 hours ago</p>
        </div>
      </div>
      <div style="display: flex; gap: var(--space-lg); padding: var(--space-md); border-bottom: 1px solid var(--pink-pale);">
        <div style="color: var(--coral-primary);">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div style="flex: 1;">
          <p class="typo-body typo-bold" style="margin-bottom: var(--space-xs);">Created new site manager</p>
          <p class="typo-body-small" style="color: var(--medium-gray);">Jane Smith assigned to Site Paris-15 - 1 day ago</p>
        </div>
      </div>
      <div style="display: flex; gap: var(--space-lg); padding: var(--space-md);">
        <div style="color: var(--coral-primary);">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        </div>
        <div style="flex: 1;">
          <p class="typo-body typo-bold" style="margin-bottom: var(--space-xs);">Updated portfolio structure</p>
          <p class="typo-body-small" style="color: var(--medium-gray);">Modified equipment database for Portfolio North - 3 days ago</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Danger Zone -->
  <div style="margin-top: var(--space-2xl); padding: var(--space-xl); background-color: #fee; border: 2px solid #fcc; border-radius: var(--space-md);">
    <h3 class="typo-h4" style="margin-bottom: var(--space-md); color: #c00;">Danger Zone</h3>
    <p class="typo-body" style="margin-bottom: var(--space-lg); color: var(--dark-gray);">
      Deleting this account will permanently remove all associated data, including portfolios, site managers, and contracts. This action cannot be undone.
    </p>
    <%= link_to admin_portfolio_manager_path, method: :delete, data: { confirm: 'Are you absolutely sure? This action cannot be undone!' }, class: "typo-btn-danger" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
      Delete Account
    <% end %>
  </div>
</div>
