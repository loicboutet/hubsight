<% content_for :header, "Client Management" %>

<div class="section">
  <div style="display: flex; flex-wrap: wrap; justify-content: space-between; align-items: center; gap: var(--space-md); margin-bottom: var(--space-xl);">
    <div style="flex: 1; min-width: 250px;">
      <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Client Accounts</h2>
      <p class="typo-body-small">Access and manage client data with proper authorization</p>
    </div>
  </div>

  <!-- Important Notice -->
  <div style="background-color: #fff3cd; border-left: 4px solid #ffc107; padding: var(--space-lg); margin-bottom: var(--space-xl); border-radius: var(--space-sm);">
    <div style="display: flex; align-items: start; gap: var(--space-md);">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="#856404" style="flex-shrink: 0;">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <div>
        <p class="typo-body typo-bold" style="color: #856404; margin-bottom: var(--space-xs);">Authorization Required</p>
        <p class="typo-body-small" style="color: #856404; margin: 0;">
          Access to client data requires formalized contractual authorization. Ensure proper agreements are in place before impersonating client accounts.
        </p>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="admin-stats-grid">
    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <div class="admin-stat-label">Total Clients</div>
          <div class="admin-stat-value">0</div>
          <div class="admin-stat-change">Active accounts</div>
        </div>
        <div class="admin-stat-icon blue">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
      </div>
    </div>

    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <div class="admin-stat-label">Authorized Access</div>
          <div class="admin-stat-value">0</div>
          <div class="admin-stat-change">With valid contracts</div>
        </div>
        <div class="admin-stat-icon green">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <div class="admin-stat-label">Active Sessions</div>
          <div class="admin-stat-value">0</div>
          <div class="admin-stat-change">Currently impersonating</div>
        </div>
        <div class="admin-stat-icon coral">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Search and Filters -->
  <div style="margin-bottom: var(--space-lg); padding: var(--space-lg); background-color: var(--pink-light); border-radius: var(--space-sm);">
    <form style="display: grid; grid-template-columns: 1fr 1fr auto; gap: var(--space-md); align-items: end;">
      <div>
        <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-xs);">Search</label>
        <input type="text" placeholder="Search by organization or email..." style="width: 100%; padding: 12px; border: 1px solid var(--light-gray); border-radius: var(--space-sm); font-size: 1rem;">
      </div>
      <div>
        <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-xs);">Authorization Status</label>
        <select style="width: 100%; padding: 12px; border: 1px solid var(--light-gray); border-radius: var(--space-sm); font-size: 1rem;">
          <option>All Clients</option>
          <option>Authorized</option>
          <option>Pending Authorization</option>
        </select>
      </div>
      <button type="submit" class="typo-btn-success">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        Search
      </button>
    </form>
  </div>

  <!-- Clients Table -->
  <div style="overflow-x: auto;">
    <table class="typo-table">
      <thead>
        <tr>
          <th>Organization</th>
          <th>Contact</th>
          <th>Email</th>
          <th>Portfolios</th>
          <th>Authorization</th>
          <th>Last Access</th>
          <th style="text-align: right;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="typo-bold">ABC Properties Ltd.</td>
          <td>Jean Dupont</td>
          <td>jean.dupont@abcproperties.fr</td>
          <td><span class="typo-label-info">5 portfolios</span></td>
          <td><span class="typo-label-success">Authorized</span></td>
          <td>2 days ago</td>
          <td style="text-align: right;">
            <div style="display: inline-flex; gap: var(--space-sm); flex-wrap: wrap; justify-content: flex-end;">
              <%= link_to impersonate_admin_client_path(1), method: :post, data: { confirm: 'Are you sure you want to impersonate this client? This action will be logged.' }, class: "typo-btn-small typo-btn-small-secondary" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                Impersonate
              <% end %>
            </div>
          </td>
        </tr>
        <tr>
          <td class="typo-bold">France Immobilier</td>
          <td>Marie Martin</td>
          <td>marie.martin@franceimmobilier.fr</td>
          <td><span class="typo-label-info">3 portfolios</span></td>
          <td><span class="typo-label-success">Authorized</span></td>
          <td>1 week ago</td>
          <td style="text-align: right;">
            <div style="display: inline-flex; gap: var(--space-sm); flex-wrap: wrap; justify-content: flex-end;">
              <%= link_to impersonate_admin_client_path(2), method: :post, data: { confirm: 'Are you sure you want to impersonate this client? This action will be logged.' }, class: "typo-btn-small typo-btn-small-secondary" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                Impersonate
              <% end %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- Access Log -->
  <div style="margin-top: var(--space-2xl);">
    <h3 class="typo-h4" style="margin-bottom: var(--space-lg);">Recent Access Log</h3>
    <div style="background-color: var(--white); border: 1px solid var(--pink-pale); border-radius: var(--space-md); padding: var(--space-lg);">
      <div style="text-align: center; padding: var(--space-xl); color: var(--medium-gray);">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="margin: 0 auto var(--space-sm); opacity: 0.3;">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <p class="typo-body-small">No access logs available</p>
      </div>
    </div>
  </div>
</div>
