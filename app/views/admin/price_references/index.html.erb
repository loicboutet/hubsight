<% content_for :header, "Références de Prix" %>

<div class="section">
  <div style="display: flex; flex-wrap: wrap; justify-content: space-between; align-items: center; gap: var(--space-md); margin-bottom: var(--space-xl);">
    <div style="flex: 1; min-width: 250px;">
      <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Base de Données des Références de Prix</h2>
      <p class="typo-body-small">Gérer les références de prix pour les comparaisons de contrats et l'analyse des économies</p>
    </div>
    <div style="display: flex; flex-wrap: wrap; gap: var(--space-sm);">
      <%= link_to import_admin_price_references_path, class: "typo-btn-cancel", style: "padding: 8px 16px; white-space: nowrap;" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="flex-shrink: 0;">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
        </svg>
        <span style="white-space: nowrap;">Importer Excel</span>
      <% end %>
      <%= link_to export_admin_price_references_path, class: "typo-btn-cancel", style: "padding: 8px 16px; white-space: nowrap;" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="flex-shrink: 0;">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        <span style="white-space: nowrap;">Exporter Excel</span>
      <% end %>
      <%= link_to new_admin_price_reference_path, class: "typo-btn-success", style: "padding: 8px 16px; white-space: nowrap;" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="flex-shrink: 0;">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <span style="white-space: nowrap;">Nouvelle Référence</span>
      <% end %>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="admin-stats-grid">
    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <div class="admin-stat-label">Total Références</div>
          <div class="admin-stat-value">0</div>
          <div class="admin-stat-change">Points de prix en base</div>
        </div>
        <div class="admin-stat-icon blue">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <div class="admin-stat-label">Familles de Contrats</div>
          <div class="admin-stat-value">0</div>
          <div class="admin-stat-change">Catégories uniques</div>
        </div>
        <div class="admin-stat-icon green">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
        </div>
      </div>
    </div>

    <div class="admin-stat-card">
      <div class="admin-stat-header">
        <div>
          <div class="admin-stat-label">Dernière Mise à Jour</div>
          <div class="admin-stat-value">--</div>
          <div class="admin-stat-change">État de la base</div>
        </div>
        <div class="admin-stat-icon purple">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Search and Filters -->
  <div style="margin-bottom: var(--space-lg); padding: var(--space-lg); background-color: var(--pink-light); border-radius: var(--space-sm);">
    <form style="display: grid; grid-template-columns: 1fr 1fr 1fr auto; gap: var(--space-md); align-items: end;">
      <div>
        <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-xs);">Rechercher</label>
        <input type="text" placeholder="Rechercher par service ou équipement..." style="width: 100%; padding: 12px; border: 1px solid var(--light-gray); border-radius: var(--space-sm); font-size: 1rem;">
      </div>
      <div>
        <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-xs);">Famille de Contrat</label>
        <select style="width: 100%; padding: 12px; border: 1px solid var(--light-gray); border-radius: var(--space-sm); font-size: 1rem;">
          <option>Toutes les Familles</option>
          <option>Maintenance</option>
          <option>Assurance</option>
          <option>Contrôle Technique</option>
        </select>
      </div>
      <div>
        <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-xs);">Type d'Équipement</label>
        <select style="width: 100%; padding: 12px; border: 1px solid var(--light-gray); border-radius: var(--space-sm); font-size: 1rem;">
          <option>Tous les Types</option>
          <option>CVC</option>
          <option>Ascenseur</option>
          <option>Sécurité Incendie</option>
        </select>
      </div>
      <button type="submit" class="typo-btn-success">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        Rechercher
      </button>
    </form>
  </div>

