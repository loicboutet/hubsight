<% content_for :header, "Bâtiments" %>

<div class="section">
  <div style="margin-bottom: var(--space-xl);">
    <div>
      <h2 class="typo-h2" style="margin-bottom: var(--space-sm);">Tous les Bâtiments</h2>
      <p class="typo-body-small">Vue d'ensemble des bâtiments - Accès en lecture seule</p>
    </div>
  </div>

  <div style="background-color: var(--white); border-radius: var(--space-md); ">
    <!-- Filters Section -->
    <div style="margin-bottom: var(--space-xl); padding: var(--space-lg); background-color: #f8f9fa; border-radius: var(--space-sm);">
      <div style="display: grid; grid-template-columns: 1fr 1fr 1fr 1fr auto auto; gap: var(--space-md); align-items: end;">
        <div>
          <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-sm);">Recherche</label>
          <input type="text" placeholder="Nom du bâtiment..." style="width: 100%; padding: 10px; border: 1px solid var(--light-gray); border-radius: var(--space-sm);">
        </div>
        <div>
          <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-sm);">Site</label>
          <select style="width: 100%; padding: 10px; border: 1px solid var(--light-gray); border-radius: var(--space-sm);">
            <option>Tous les sites</option>
            <option>Tour Montparnasse</option>
            <option>Campus La Défense</option>
            <option>Centre Commercial Odysseum</option>
            <option>Site Industriel Lyon Nord</option>
            <option>Résidence Le Parc</option>
            <option>Parc d'Activités Roissy</option>
          </select>
        </div>
        <div>
          <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-sm);">Catégorie ERP</label>
          <select style="width: 100%; padding: 10px; border: 1px solid var(--light-gray); border-radius: var(--space-sm);">
            <option>Tous</option>
            <option>Type J - Personnes âgées</option>
            <option>Type L - Salles de conférences</option>
            <option>Type M - Magasins</option>
            <option>Type W - Bureaux</option>
            <option>Type R - Enseignement</option>
          </select>
        </div>
        <div>
          <label class="typo-body-small typo-bold" style="display: block; margin-bottom: var(--space-sm);">Trier par</label>
          <select style="width: 100%; padding: 10px; border: 1px solid var(--light-gray); border-radius: var(--space-sm);">
            <option>Nom (A-Z)</option>
            <option>Année de construction</option>
            <option>Surface</option>
          </select>
        </div>
        <button type="button" class="typo-btn-cancel" style="display: inline-flex; align-items: center; gap: var(--space-sm);">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
          Effacer
        </button>
        <button type="submit" class="typo-btn-success" style="display: inline-flex; align-items: center; gap: var(--space-sm);">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
          </svg>
          Filtrer
        </button>
      </div>
    </div>

    <!-- Buildings Table -->
    <div style="overflow-x: auto;">
      <table style="width: 100%; border-collapse: collapse;">
        <thead>
          <tr style="background-color: #f8f9fa; border-bottom: 2px solid var(--pink-pale);">
            <th style="padding: var(--space-md); text-align: left; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">BÂTIMENT</th>
            <th style="padding: var(--space-md); text-align: left; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">SITE</th>
            <th style="padding: var(--space-md); text-align: center; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">ANNÉE</th>
            <th style="padding: var(--space-md); text-align: left; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">CATÉGORIE ERP</th>
            <th style="padding: var(--space-md); text-align: center; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">SURFACE</th>
            <th style="padding: var(--space-md); text-align: center; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">NIVEAUX</th>
            <th style="padding: var(--space-md); text-align: center; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">DPE</th>
            <th style="padding: var(--space-md); text-align: left; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">CERTIFICATION</th>
            <th style="padding: var(--space-md); text-align: right; font-weight: 600; color: var(--gray-secondary); font-size: 0.875rem;">ACTIONS</th>
          </tr>
        </thead>
        <tbody>
          <% [
            {id: 1, name: "Bâtiment A - Principal", site: "Tour Montparnasse", year: 1995, area: "12,500", floors: 8, erp: "Type W", energy: "B", certification: "HQE"},
            {id: 2, name: "Bâtiment B - Annexe", site: "Tour Montparnasse", year: 2005, area: "8,200", floors: 5, erp: "Type W", energy: "A", certification: "BREEAM"},
            {id: 3, name: "Bâtiment Nord", site: "Campus La Défense", year: 2010, area: "25,000", floors: 12, erp: "Type W", energy: "A", certification: "HQE"},
            {id: 4, name: "Bâtiment Sud", site: "Campus La Défense", year: 2008, area: "22,500", floors: 10, erp: "Type W", energy: "B", certification: "BREEAM"},
            {id: 5, name: "Bâtiment Est", site: "Campus La Défense", year: 2012, area: "18,000", floors: 8, erp: "Type W", energy: "A", certification: "LEED"},
            {id: 6, name: "Bâtiment Ouest", site: "Campus La Défense", year: 2015, area: "20,000", floors: 9, erp: "Type W", energy: "A", certification: "HQE"},
            {id: 7, name: "Galerie Commerciale", site: "Centre Commercial Odysseum", year: 2002, area: "45,000", floors: 3, erp: "Type M", energy: "C", certification: "Aucune"},
            {id: 8, name: "Parking Couvert", site: "Centre Commercial Odysseum", year: 2002, area: "20,000", floors: 4, erp: "Type PS", energy: "D", certification: "Aucune"},
            {id: 9, name: "Atelier Principal", site: "Site Industriel Lyon Nord", year: 1988, area: "18,000", floors: 2, erp: "Type W", energy: "D", certification: "Aucune"},
            {id: 10, name: "Entrepôt A", site: "Site Industriel Lyon Nord", year: 1990, area: "12,000", floors: 1, erp: "Type M", energy: "E", certification: "Aucune"},
            {id: 11, name: "Entrepôt B", site: "Site Industriel Lyon Nord", year: 1995, area: "10,000", floors: 1, erp: "Type M", energy: "D", certification: "Aucune"},
            {id: 12, name: "Bureau Administratif", site: "Site Industriel Lyon Nord", year: 2005, area: "3,500", floors: 3, erp: "Type W", energy: "C", certification: "HQE"},
            {id: 13, name: "Bâtiment A", site: "Résidence Le Parc", year: 2010, area: "4,500", floors: 5, erp: "Type R", energy: "B", certification: "RT 2012"},
            {id: 14, name: "Bâtiment B", site: "Résidence Le Parc", year: 2012, area: "4,000", floors: 5, erp: "Type R", energy: "A", certification: "RT 2012"},
            {id: 15, name: "Bâtiment C", site: "Résidence Le Parc", year: 2014, area: "4,000", floors: 4, erp: "Type R", energy: "A", certification: "RT 2012"},
          ].each_with_index do |building, index| %>
            <tr style="border-bottom: 1px solid #e9ecef; <%= 'background-color: #fafbfc;' if index.even? %>">
              <!-- Building Name -->
              <td style="padding: var(--space-md);">
                <div>
                  <p class="typo-body-small typo-bold" style="margin-bottom: 2px;"><%= building[:name] %></p>
                  <p class="typo-body-small" style="color: #999; font-size: 0.813rem;">Construit en <%= building[:year] %></p>
                </div>
              </td>
              
              <!-- Site -->
              <td style="padding: var(--space-md);">
                <p class="typo-body-small"><%= building[:site] %></p>
              </td>
              
              <!-- Year -->
              <td style="padding: var(--space-md); text-align: center;">
                <p class="typo-body-small"><%= building[:year] %></p>
              </td>
              
              <!-- ERP Category -->
              <td style="padding: var(--space-md);">
                <span style="display: inline-block; padding: 4px 12px; background-color: #e7f3ff; color: #0066cc; border-radius: 12px; font-size: 0.813rem; font-weight: 600;">
                  <%= building[:erp] %>
                </span>
              </td>
              
              <!-- Surface -->
              <td style="padding: var(--space-md); text-align: center;">
                <p class="typo-body-small typo-bold" style="color: var(--coral-primary);"><%= building[:area] %> m²</p>
              </td>
              
              <!-- Floors -->
              <td style="padding: var(--space-md); text-align: center;">
                <p class="typo-body-small typo-bold"><%= building[:floors] %></p>
              </td>
              
              <!-- Energy Rating -->
              <td style="padding: var(--space-md); text-align: center;">
                <% 
                  energy_colors = {
                    'A' => '#d4edda',
                    'B' => '#d1ecf1', 
                    'C' => '#fff3cd',
                    'D' => '#ffe5b4',
                    'E' => '#f8d7da'
                  }
                  text_colors = {
                    'A' => '#155724',
                    'B' => '#0c5460',
                    'C' => '#856404',
                    'D' => '#856404',
                    'E' => '#721c24'
                  }
                %>
                <span style="display: inline-block; padding: 4px 12px; background-color: <%= energy_colors[building[:energy]] %>; color: <%= text_colors[building[:energy]] %>; border-radius: 12px; font-size: 0.813rem; font-weight: 600;">
                  <%= building[:energy] %>
                </span>
              </td>
              
              <!-- Certification -->
              <td style="padding: var(--space-md);">
                <p class="typo-body-small"><%= building[:certification] %></p>
              </td>
              
              <!-- Actions (Read-only - View only) -->
              <td style="padding: var(--space-md);">
                <div style="display: flex; gap: var(--space-xs); justify-content: flex-end;">
                  <a href="#" class="typo-btn-small typo-btn-small-secondary" title="Voir">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    Voir
                  </a>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Info Box -->
    <div style="margin-top: var(--space-xl); margin-bottom: var(--space-xl); padding: var(--space-lg); background-color: #e7f3ff; border-radius: var(--space-sm);">
      <p class="typo-body-small" style="color: #0066cc;">
        <strong>Technicien:</strong> Vous avez un accès en lecture seule aux informations des bâtiments. 
        Pour toute modification, veuillez contacter le gestionnaire de portefeuille.
      </p>
    </div>

    <!-- Pagination -->
    <div style="margin-top: var(--space-xl);">
      <%= render 'shared/pagination', 
        current_page: 1, 
        total_pages: 2, 
        total_count: 15, 
        per_page: 10,
        path: technician_buildings_path %>
    </div>
  </div>
</div>
