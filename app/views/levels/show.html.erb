<% content_for :header, "Niveau" %>

<div class="section">
  <!-- Breadcrumb Navigation -->
  <%= render 'shared/breadcrumb', path: [
    { name: 'Sites', url: sites_path, icon: render('shared/hierarchy_icons', type: 'site', size: 16) },
    { name: 'Tour Montparnasse', url: site_path('tour-montparnasse'), icon: render('shared/hierarchy_icons', type: 'site', size: 16) },
    { name: 'Bât. A', url: site_building_path('tour-montparnasse', 'building-a'), icon: render('shared/hierarchy_icons', type: 'building', size: 16) },
    { name: 'Niveaux', url: building_levels_path('building-a'), icon: render('shared/hierarchy_icons', type: 'level', size: 16) },
    { name: 'Rez-de-chaussée', url: nil, icon: render('shared/hierarchy_icons', type: 'level', size: 16) }
  ] %>

  <!-- Header Section -->
  <div style="margin-bottom: var(--space-xl); display: flex; justify-content: space-between; align-items: center;">
    <div style="display: flex; align-items: center; gap: var(--space-md);">
      <%= render 'shared/hierarchy_icons', type: 'level', size: 32, color: '#f59e0b' %>
      <div>
        <h2 class="typo-h2" style="margin-bottom: var(--space-xs);">Rez-de-chaussée</h2>
        <p class="typo-body-small" style="color: var(--medium-gray);">Bâtiment A - Tour Montparnasse</p>
      </div>
    </div>
    <div style="display: flex; gap: var(--space-md);">
      <%= link_to edit_building_level_path('building-a', 'level-rdc'), class: "typo-btn-small typo-btn-small-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Éditer
      <% end %>
      <%= link_to site_building_path('tour-montparnasse', 'building-a'), class: "typo-btn-cancel" do %>
        ← Retour au Bâtiment
      <% end %>
    </div>
  </div>

  <div style="background-color: var(--white); border-radius: var(--space-md); ">
    <!-- Level Header Card -->
    <div style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); padding: var(--space-xl); border-radius: var(--space-md); color: white; margin-bottom: var(--space-xl);">
      <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: var(--space-lg);">
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Surface</p>
          <p class="typo-h4" style="color: white;">1,500 m²</p>
        </div>
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Altitude</p>
          <p class="typo-h4" style="color: white;">0 m</p>
        </div>
        <div>
          <p style="color: rgba(255,255,255,0.8); font-size: 0.75rem; margin-bottom: var(--space-xs); text-transform: uppercase;">Espaces</p>
          <p class="typo-h4" style="color: white;">15</p>
        </div>
      </div>
    </div>

    <!-- Summary Statistics with Icons -->
    <div style="margin-bottom: var(--space-xl);">
      <h4 class="typo-h4" style="margin-bottom: var(--space-lg);">Vue d'Ensemble</h4>
      <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--space-lg);">
        <div style="text-align: center; padding: var(--space-xl); background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); border-radius: var(--space-md); color: white; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
          <div style="display: flex; justify-content: center; margin-bottom: var(--space-md);">
            <%= render 'shared/hierarchy_icons', type: 'space', size: 32, color: 'white' %>
          </div>
          <p class="typo-h2" style="color: white; margin-bottom: var(--space-xs);">15</p>
          <p class="typo-body-small" style="color: rgba(255,255,255,0.9); text-transform: uppercase; font-size: 0.75rem; font-weight: 600;">Espaces</p>
        </div>

        <div style="text-align: center; padding: var(--space-xl); background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%); border-radius: var(--space-md); color: white; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
          <div style="display: flex; justify-content: center; margin-bottom: var(--space-md);">
            <%= render 'shared/hierarchy_icons', type: 'equipment', size: 32, color: 'white' %>
          </div>
          <p class="typo-h2" style="color: white; margin-bottom: var(--space-xs);">28</p>
          <p class="typo-body-small" style="color: rgba(255,255,255,0.9); text-transform: uppercase; font-size: 0.75rem; font-weight: 600;">Équipements</p>
        </div>
      </div>
    </div>

    <!-- Spaces Section -->
    <div style="margin-bottom: var(--space-xl);">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-lg);">
        <div style="display: flex; align-items: center; gap: var(--space-sm);">
          <%= render 'shared/hierarchy_icons', type: 'space', size: 24, color: '#8b5cf6' %>
          <h4 class="typo-h4">Espaces de ce Niveau</h4>
        </div>
        <%= link_to new_level_space_path('level-rdc'), class: "typo-btn-success", style: "display: inline-flex; align-items: center; gap: var(--space-sm);" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nouvel Espace
        <% end %>
      </div>

      <div style="display: grid; gap: var(--space-md);">
        <%
          # Mock spaces data
          spaces = [
            { id: 'space-101', name: 'Bureau 101', type: 'Bureau', area: 25, capacity: 2, equipment: 3 },
            { id: 'space-102', name: 'Bureau 102', type: 'Bureau', area: 25, capacity: 2, equipment: 3 },
            { id: 'space-a', name: 'Salle de réunion A', type: 'Salle de réunion', area: 40, capacity: 10, equipment: 5 },
            { id: 'space-accueil', name: 'Accueil', type: 'Réception', area: 60, capacity: 5, equipment: 4 },
            { id: 'space-tech', name: 'Local Technique', type: 'Local technique', area: 30, capacity: 0, equipment: 8 }
          ]
        %>

        <% spaces.each do |space| %>
          <div style="padding: var(--space-lg); background-color: #f8f9fa; border-radius: var(--space-md); border-left: 4px solid #8b5cf6;">
            <div style="display: flex; justify-content: space-between; align-items: start;">
              <div style="flex: 1;">
                <div style="display: flex; align-items: center; gap: var(--space-sm); margin-bottom: var(--space-xs);">
                  <%= render 'shared/hierarchy_icons', type: 'space', size: 20, color: '#8b5cf6' %>
                  <h5 class="typo-h5" style="color: var(--dark-gray);"><%= space[:name] %></h5>
                  <span style="display: inline-block; padding: 4px 10px; background-color: #f3e8ff; color: #7c3aed; border-radius: 4px; font-size: 0.75rem; font-weight: 600;">
                    <%= space[:type] %>
                  </span>
                </div>
                <p class="typo-body-small" style="color: var(--medium-gray); margin-bottom: var(--space-md);">
                  <%= space[:area] %> m² • Capacité: <%= space[:capacity] %> <%= space[:capacity] > 1 ? 'personnes' : 'personne' %>
                </p>
                
                <div style="display: flex; align-items: center; gap: var(--space-xs);">
                  <%= render 'shared/hierarchy_icons', type: 'equipment', size: 16, color: '#6b7280' %>
                  <span class="typo-body-small typo-bold"><%= space[:equipment] %></span>
                  <span class="typo-body-small" style="color: var(--medium-gray);">Équipements</span>
                </div>
              </div>
              
              <div style="display: flex; gap: var(--space-xs);">
                <%= link_to level_space_path('level-rdc', space[:id]), class: "typo-btn-small typo-btn-small-secondary" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  Voir
                <% end %>
                <%= link_to edit_level_space_path('level-rdc', space[:id]), class: "typo-btn-small typo-btn-small-primary" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Éditer
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Level Details -->
    <div>
      <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
        Caractéristiques du Niveau
      </h4>
      <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: var(--space-md);">
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Nom du Niveau</p>
          <p class="typo-body-small typo-bold">Rez-de-chaussée</p>
        </div>
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Altitude</p>
          <p class="typo-body-small typo-bold">0 m</p>
        </div>
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Surface Totale</p>
          <p class="typo-body-small typo-bold">1,500 m²</p>
        </div>
      </div>
    </div>
  </div>
</div>
