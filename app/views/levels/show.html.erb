<% content_for :header, "Niveau" %>

<div class="section">
  <!-- Breadcrumb Navigation -->
  <% site_icon = capture { render 'shared/hierarchy_icons', type: 'site', size: 16 } %>
  <% building_icon = capture { render 'shared/hierarchy_icons', type: 'building', size: 16 } %>
  <% level_icon = capture { render 'shared/hierarchy_icons', type: 'level', size: 16 } %>
  <%= render 'shared/breadcrumb', path: [
    { name: 'Sites', url: sites_path, icon: site_icon },
    { name: @site.name, url: site_path(@site), icon: site_icon },
    { name: @building.name, url: building_path(@building), icon: building_icon },
    { name: @level.name, url: nil, icon: level_icon }
  ] %>

  <!-- Header Section -->
  <div style="margin-bottom: var(--space-xl); display: flex; flex-wrap: wrap; justify-content: space-between; align-items: center; gap: var(--space-md);">
    <div style="display: flex; align-items: center; gap: var(--space-md); flex: 1; min-width: 300px;">
      <%= render 'shared/hierarchy_icons', type: 'level', size: 32, color: '#f59e0b' %>
      <div>
        <h2 class="typo-h2" style="margin-bottom: var(--space-xs);"><%= @level.name %></h2>
        <p class="typo-body-small" style="color: var(--medium-gray);"><%= @building.name %> - <%= @site.name %></p>
      </div>
    </div>
    <div style="display: flex; gap: var(--space-md); flex-wrap: wrap;">
      <%= link_to edit_level_path(@level), class: "typo-btn-small typo-btn-small-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Éditer
      <% end %>
      <%= link_to building_path(@building), class: "typo-btn-cancel" do %>
        ← Retour au Bâtiment
      <% end %>
      <%= link_to level_path(@level), data: { turbo_method: :delete, turbo_confirm: 'Êtes-vous sûr de vouloir supprimer ce niveau ?' }, class: "typo-btn-small typo-btn-small-danger" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Supprimer
      <% end %>
    </div>
  </div>

  <!-- Summary Statistics with Icons -->
  <div style="margin-bottom: var(--space-xl);">
    <div class="admin-stats-grid">
      <div class="admin-stat-card">
        <div class="admin-stat-header">
          <div>
            <div class="admin-stat-label">Espaces</div>
            <div class="admin-stat-value"><%= @level.spaces.count %></div>
            <div class="admin-stat-change">Zones fonctionnelles</div>
          </div>
          <div class="admin-stat-icon purple">
            <%= render 'shared/hierarchy_icons', type: 'space', size: 32, color: '#a855f7' %>
          </div>
        </div>
      </div>

      <div class="admin-stat-card">
        <div class="admin-stat-header">
          <div>
            <div class="admin-stat-label">Équipements</div>
            <div class="admin-stat-value"><%= @equipment_count %></div>
            <div class="admin-stat-change">Actifs gérés</div>
          </div>
          <div class="admin-stat-icon coral">
            <%= render 'shared/hierarchy_icons', type: 'equipment', size: 32, color: 'var(--coral-primary)' %>
          </div>
        </div>
      </div>

      <% if @level.area %>
      <div class="admin-stat-card">
        <div class="admin-stat-header">
          <div>
            <div class="admin-stat-label">Surface</div>
            <div class="admin-stat-value" style="font-size: 1.5rem;"><%= @level.formatted_area %></div>
            <div class="admin-stat-change">Surface totale</div>
          </div>
          <div class="admin-stat-icon green">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM14 5a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1h-4a1 1 0 01-1-1V5zM4 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-3zM14 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1h-4a1 1 0 01-1-1v-3z" />
            </svg>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <!-- Spaces Section -->
  <div style="margin-bottom: var(--space-xl);">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-lg);">
      <div style="display: flex; align-items: center; gap: var(--space-sm);">
        <%= render 'shared/hierarchy_icons', type: 'space', size: 24, color: '#8b5cf6' %>
        <h4 class="typo-h4" style="margin-bottom: 0">Espaces de ce Niveau</h4>
      </div>
      <div style="display: flex; gap: var(--space-sm);">
        <%= link_to new_level_space_path(@level.id), class: "typo-btn-success", style: "display: inline-flex; align-items: center; gap: var(--space-sm);" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nouvel Espace
        <% end %>
        <%= link_to level_spaces_path(@level.id), class: "typo-btn-success", style: "display: inline-flex; align-items: center; gap: var(--space-sm);" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h9m5-4v12m0 0l-4-4m4 4l4-4" />
          </svg>
          Espaces
        <% end %>
      </div>
    </div>

    <div style="display: grid; gap: var(--space-md);">
      <% @level.spaces.ordered.limit(5).each do |space| %>
        <div style="padding: var(--space-lg); background-color: #f8f9fa; border-radius: var(--space-md); border-left: 4px solid #8b5cf6;">
          <div style="display: flex; justify-content: space-between; align-items: start;">
            <div style="flex: 1;">
              <div style="display: flex; align-items: center; gap: var(--space-sm); margin-bottom: var(--space-xs);">
                <%= render 'shared/hierarchy_icons', type: 'space', size: 20, color: '#8b5cf6' %>
                <%= link_to space_path(space), style: "text-decoration: none;" do %>
                  <h5 class="typo-h5" style="color: var(--coral-primary); margin-bottom: 0; transition: color 0.2s;"><%= space.name %></h5>
                <% end %>
                <% if space.space_type %>
                  <span style="display: inline-block; padding: 4px 10px; background-color: #f3e8ff; color: #7c3aed; border-radius: 4px; font-size: 0.75rem; font-weight: 600;">
                    <%= space.space_type %>
                  </span>
                <% end %>
              </div>
              <p class="typo-body-small" style="color: var(--medium-gray); margin-bottom: var(--space-md);">
                <% if space.area %>
                  <%= space.formatted_area %>
                <% end %>
                <% if space.capacity %>
                  • Capacité: <%= space.capacity %> <%= space.capacity > 1 ? 'personnes' : 'personne' %>
                <% end %>
              </p>
              
              <div style="display: flex; align-items: center; gap: var(--space-xs);">
                <%= render 'shared/hierarchy_icons', type: 'equipment', size: 16, color: '#6b7280' %>
                <span class="typo-body-small typo-bold;" style="margin-bottom: 0"><%= space.equipment_count %></span>
                <span class="typo-body-small" style="color: var(--medium-gray); margin-bottom: 0">Équipements</span>
              </div>
            </div>
            
            <div style="display: flex; gap: var(--space-xs); flex-wrap: wrap;">
              <%= link_to space_path(space), class: "typo-btn-small typo-btn-small-secondary" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                Voir
              <% end %>
              <%= link_to edit_space_path(space), class: "typo-btn-small typo-btn-small-primary" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Éditer
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <% if @level.spaces.count == 0 %>
        <div style="text-align: center; padding: var(--space-xl); background-color: #f8f9fa; border-radius: var(--space-md);">
          <p class="typo-body">Aucun espace pour ce niveau</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Level Details -->
  <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--space-xl);">
    <!-- Technical Information -->
    <div>
      <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
        Caractéristiques du Niveau
      </h4>
      <div style="display: grid; gap: var(--space-md);">
        <div>
          <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Nom du Niveau</p>
          <p class="typo-body-small typo-bold"><%= @level.name %></p>
        </div>
        <% if @level.level_number %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Numéro de Niveau</p>
            <p class="typo-body-small typo-bold"><%= @level.level_number %></p>
          </div>
        <% end %>
        <% if @level.altitude %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Altitude</p>
            <p class="typo-body-small typo-bold"><%= @level.formatted_altitude %></p>
          </div>
        <% end %>
        <% if @level.area %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Surface Totale</p>
            <p class="typo-body-small typo-bold"><%= @level.formatted_area %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Data Source Tracking -->
    <div>
      <h4 class="typo-h4" style="margin-bottom: var(--space-lg); padding-bottom: var(--space-md); border-bottom: 2px solid var(--pink-pale);">
        Traçabilité
      </h4>
      <div style="display: grid; gap: var(--space-md);">
        <% if @level.created_by_name %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Créé par</p>
            <p class="typo-body-small typo-bold"><%= @level.created_by_name %></p>
          </div>
        <% end %>
        <% if @level.updated_by_name %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Modifié par</p>
            <p class="typo-body-small typo-bold"><%= @level.updated_by_name %></p>
          </div>
        <% end %>
        <% if @level.description %>
          <div>
            <p class="typo-body-small" style="color: var(--medium-gray); font-size: 0.75rem; text-transform: uppercase;">Description</p>
            <p class="typo-body-small typo-bold"><%= @level.description %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
